<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>UniVerse Channels</title>
        
        <link
        rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
        />

        <style>

            @import url("https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&family=Orbitron:wght@400;700&display=swap");            
            :root {
                --dark-bg: #1a1a2e;
                --dark-card: #272c4a;
                --primary-blue: #007bff;
                --accent-violet: #8a2be2;
                --text-light: #e0e0e0;
                --input-bg: #3e4a6e;
                --button-hover-blue: #0056b3;
                --button-hover-violet: #6a1ba3;
                --border-glow: rgba(138, 43, 226, 0.4);
                --subtle-text: #a0a0a0;
            }
            
            * {
                box-sizing: border-box;
                margin: 0;
                padding: 0;
            }
            
            body {
                font-family: "Montserrat", sans-serif;
                margin: 0;
                padding: 0;
                min-height: 100vh;
                background: linear-gradient(135deg, var(--dark-bg) 0%, #160e2c 100%);
                color: var(--text-light);
                overflow-x: hidden;
                position: relative;
                display: flex;
                flex-direction: column;
            }
            
            .background-dots {
                position: absolute;
                inset: 0;
                overflow: hidden;
                pointer-events: none;
                z-index: 0;
                opacity: 0.3;
            }
            
            .dot {
                position: absolute;
                background: rgba(138, 43, 226, 0.2);
                border-radius: 50%;
                animation: moveDots 20s infinite linear;
                opacity: 0;
            }
            
            .dot:nth-child(even) {
                background: rgba(0, 123, 255, 0.2);
                animation-delay: 10s;
            }
            
            @keyframes moveDots {
                0% {
                    transform: translate(var(--x-start), var(--y-start)) scale(0);
                    opacity: 0;
                }
                50% {
                    opacity: 1;
                }
                100% {
                    transform: translate(var(--x-end), var(--y-end)) scale(1.5);
                    opacity: 0;
                }
            }
            
            .top-bar {
                background-color: var(--dark-card);
                padding: 15px 40px;
                display: flex;
                justify-content: space-between;
                align-items: center;
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
                border-bottom: 1px solid var(--accent-violet);
                position: sticky;
                top: 0;
                z-index: 1000;
            }
            
            .top-bar .logo {
                font-family: "Orbitron", sans-serif;
                font-size: 2.2em;
                font-weight: 700;
                text-shadow: 0 0 10px var(--accent-violet), 0 0 20px var(--primary-blue);
                background: linear-gradient(45deg, var(--primary-blue), var(--accent-violet));
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                letter-spacing: 1.5px;
                cursor: pointer;
                transition: all 0.3s ease;
            }
            
            .top-bar .logo:hover {
                transform: scale(1.03);
                text-shadow: 0 0 12px var(--accent-violet), 0 0 25px var(--primary-blue);
            }
            
            .user-controls {
                display: flex;
                align-items: center;
                gap: 20px;
            }
            
            .back-btn {
                background: transparent;
                border: 1px solid rgba(0, 123, 255, 0.6);
                color: var(--text-light);
                border-radius: 8px;
                padding: 8px 16px;
                font-size: 0.95em;
                font-weight: 500;
                cursor: pointer;
                display: inline-flex;
                align-items: center;
                gap: 8px;
                transition: all 0.3s ease;
            }
            
            .back-btn:hover {
                background: rgba(0, 123, 255, 0.15);
                border-color: var(--accent-violet);
                transform: translateY(-1px);
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4);
            }
            
            .logout-btn {
                background: linear-gradient(90deg, var(--primary-blue), var(--accent-violet));
                color: white;
                border: none;
                border-radius: 8px;
                padding: 8px 18px;
                font-size: 0.95em;
                font-weight: 600;
                cursor: pointer;
                transition: background 0.3s ease, transform 0.2s ease, box-shadow 0.3s ease;
                letter-spacing: 0.5px;
            }
            
            .logout-btn:hover {
                background: linear-gradient(
                    90deg,
                    var(--button-hover-blue),
                    var(--button-hover-violet)
                    );
                    transform: translateY(-2px);
                    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
                }
                
                .main-content {
                    max-width: 1200px;
                    width: 100%;
                    margin: 0 auto;
                    padding: 40px 20px 60px;
                    position: relative;
                    z-index: 1;
                    flex: 1;
                }
                
                .page-header {
                    display: flex;
                    justify-content: space-between;
                    align-items: flex-end;
                    margin-bottom: 25px;
                    flex-wrap: wrap;
                    gap: 20px;
                }
                
                .page-title-block {
                    display: flex;
                    flex-direction: column;
                    gap: 4px;
                }
                
                .page-title {
                    font-family: "Orbitron", sans-serif;
                    font-size: 2.2em;
                    text-shadow: 0 0 10px rgba(0, 123, 255, 0.5);
                }
                
                .page-subtitle {
                    font-size: 0.98em;
                    color: var(--subtle-text);
                }
                
                .channel-controls-flex {
                    display: flex;
                    align-items: center;
                    justify-content: space-between;
                    gap: 15px;
                    width: 100%;
                    margin-bottom: 32px;
                }
                .search-bar {
                    position: relative;
                    flex: 1 1 0;
                }
                .button-group {
                    display: flex;
                    gap: 10px;
                }
                
                .search-bar input {
                    width: 100%;
                    padding: 10px 15px 10px 45px;
                    border: 1px solid var(--accent-violet);
                    border-radius: 8px;
                    background-color: var(--input-bg);
                    color: var(--text-light);
                    font-size: 1em;
                    outline: none;
                    transition: border-color 0.3s ease, box-shadow 0.3s ease;
                }
                
                .search-bar input:focus {
                    border-color: var(--primary-blue);
                    box-shadow: 0 0 10px var(--border-glow);
                }
                
                .search-bar i {
                    position: absolute;
                    left: 15px;
                    top: 50%;
                    transform: translateY(-50%);
                    color: var(--subtle-text);
                    pointer-events: none;
                }
                
                .create-channel-btn {
                    background: linear-gradient(45deg, var(--accent-violet), var(--primary-blue));
                    color: white;
                    border: none;
                    border-radius: 8px;
                    padding: 10px 20px;
                    font-size: 0.95em;
                    font-weight: 600;
                    cursor: pointer;
                    transition: all 0.3s ease;
                    display: inline-flex;
                    align-items: center;
                    gap: 8px;
                }
                
                .create-channel-btn:hover {
                    background: linear-gradient(
                        45deg,
                        var(--button-hover-violet),
                        var(--button-hover-blue)
                        );
                        transform: scale(1.02);
                        box-shadow: 0 4px 15px var(--border-glow);
                    }
                    
                    .channels-wrapper {
                        background-color: rgba(23, 27, 54, 0.9);
                        border-radius: 16px;
                        padding: 24px 24px 28px;
                        border: 1px solid rgba(0, 123, 255, 0.25);
                        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
                        backdrop-filter: blur(6px);
                    }

                    .channels-grid {
                        display: grid;
                        grid-template-columns: 1fr;
                        gap: 25px;
                        margin-top: 18px;
                    }
                    .channel-card {
                        background-color: var(--dark-card);
                        border-radius: 14px;
                        padding: 22px; 
                        border: 1px solid rgba(0, 123, 255, 0.35);
                        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.45);
                        position: relative;
                        overflow: visible;
                        display: flex;
                        flex-direction: column;
                        gap: 15px;
                        transition: all 0.25s ease;
                        cursor: pointer;
                    }
                    
                    .vote-badge {
                        position: absolute;
                        bottom: 12px;
                        left: 12px;
                        background: rgba(0, 0, 0, 0.6);
                        border: 1px solid rgba(0, 123, 255, 0.5);
                        border-radius: 8px;
                        padding: 6px 10px;
                        display: flex;
                        gap: 8px;
                        font-size: 0.85em;
                        font-weight: 600;
                        z-index: 10;
                    }
                    
                    .channel-card::before {
                        content: "";
                        position: absolute;
                        inset: 0;
                        background: radial-gradient(
                            circle at top left,
                            rgba(138, 43, 226, 0.35),
                            transparent 55%
                            );
                            opacity: 0;
                            transition: opacity 0.25s ease;
                            pointer-events: none;
                        }
                        
                        .channel-card:hover {
                            transform: translateY(-8px) scale(1.01); /* Reduced scale slightly for full row */
                            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.8);
                            border-color: var(--accent-violet);
                        }
                        
                        .channel-card:hover::before {
                            opacity: 1;
                        }
                        
                        .channel-header {
                            border-bottom: 1px solid rgba(138, 43, 226, 0.3);
                            padding-bottom: 10px;
                        }
                        
                        .channel-name {
                            font-weight: 700;
                            font-size: 1.4em;
                            color: var(--primary-blue);
                            text-shadow: 0 0 5px rgba(0, 123, 255, 0.4);
                        }
                        
                        .channel-subject {
                            font-weight: 400;
                            font-size: 0.95em;
                            margin-top: 5px;
                            color: #d0d0ea;
                        }
                        
                        .channel-description {
                            font-size: 0.9em;
                            color: var(--text-light);
                            margin: 5px 0 10px 0;
                            line-height: 1.5;
                        }
                            
                            .channel-tags {
                                display: flex;
                                flex-wrap: wrap;
                                gap: 8px;
                            }
                            
                            .tag-pill {
                                padding: 4px 10px;
                                border-radius: 999px;
                                font-size: 0.75em;
                                text-transform: uppercase;
                                background-color: rgba(138, 43, 226, 0.15);
                                border: 1px solid rgba(138, 43, 226, 0.5);
                                color: var(--accent-violet);
                                font-weight: 600;
                                letter-spacing: 0.5px;
                            }
                            
                            .channel-footer {
                                display: flex;
                                justify-content: space-between;
                                align-items: center;
                                padding-top: 10px;
                                border-top: 1px solid rgba(0, 123, 255, 0.3);
                            }
                            
                            .member-count {
                                font-size: 1em;
                                font-weight: 600;
                                color: #7fffd4;
                                display: flex;
                                align-items: center;
                                gap: 8px;
                            }
                            
                            .member-count i {
                                color: var(--primary-blue);
                                font-size: 1.2em;
                            }
                            
                            .join-btn {
                                padding: 6px 15px;
                                border-radius: 6px;
                                background-color: var(--primary-blue);
                                color: white;
                                font-weight: 600;
                                border: none;
                                transition: background-color 0.2s ease;
                            }
                            
                            .join-btn:hover {
                                background-color: var(--button-hover-blue);
                            }
                            
                            .no-channels {
                                text-align: center;
                                padding: 40px 16px 20px;
                                font-size: 1.05em;
                                color: var(--subtle-text);
                            }
                            
                            .no-channels span {
                                display: block;
                                font-size: 2.2em;
                                margin-bottom: 10px;
                            }
                            
                            @media (max-width: 768px) {
                                .page-title {
                                    font-size: 1.8em;
                                }
                                
                                .channel-controls {
                                    flex-direction: column;
                                    align-items: stretch;
                                }
                                
                                .create-channel-btn {
                                    width: 100%;
                                }
                                
                                .channels-wrapper {
                                    padding: 18px 16px 24px;
                                }
                            }
                            </style>

</head>
<body>
    <div class="background-dots">
        <% for(let i=0; i<25; i++) { %>
            <div class="dot" style="
                width: <%= Math.floor(Math.random() * 25) + 15 %>px;
                height: <%= Math.floor(Math.random() * 25) + 15 %>px;
                --x-start: <%= Math.random() * 100 %>vw;
                --y-start: <%= Math.random() * 100 %>vh;
                --x-end: <%= Math.random() * 100 %>vw;
                --y-end: <%= Math.random() * 100 %>vh;
                animation-delay: <%= Math.random() * 15 %>s;
            "></div>
<% } %>
</div>
    <div class="top-bar">
    <div class="logo" onclick="window.location.href='/api/dashboard'">UniVerse</div>
    <div class="user-controls">
        <button class="back-btn" onclick="window.location.href='/api/dashboard'">
            <i class="fas fa-arrow-left"></i>
            Dashboard
        </button>
        
        <form method="get" action="/api/logout">
            <button class="logout-btn">Logout</button>
        </form>
    </div>
</div>
<main class="main-content">
    <div class="page-header">
        <div class="page-title-block">
            <h1 class="page-title">Discussion Channels</h1>
            <p class="page-subtitle">
                Join a channel to connect with members discussing the topic.
            </p>
        </div>
    </div>
    
    <div class="channel-controls channel-controls-flex">
        <div class="search-bar">
            <i class="fas fa-search"></i>
            <input type="text" placeholder="Search channels by name or tag..." id="channelSearch" />
        </div>
        <div class="button-group">
            <button class="create-channel-btn" onclick="window.location.href='/dashboard/forumDash/ForumCreate'">
                <i class="fas fa-plus-circle"></i>
                Create Channel
            </button>
            <button class="create-channel-btn" id="myServersBtn" style="background: linear-gradient(45deg,#0056b3,#6a1ba3);" onclick="toggleMyServers()">
                <i class="fas fa-server"></i>
                My Servers
            </button>
            <button class="create-channel-btn" id="sortBtn" style="background: linear-gradient(45deg,#6a1ba3,#0056b3);" onclick="toggleSortByVotes()">
                <i class="fas fa-arrow-down-wide-short"></i>
                Sort by Votes
            </button>
        </div>
    </div>
    
    <section class="channels-wrapper">
        <% if (!channels || channels.length === 0) { %>
            <div class="no-channels">
                <span>ü™ê</span>
                No discussion channels found. Be the first to create one!
            </div>
            <% } else { %>
                <div class="channels-grid">
                    <% channels.forEach(channel => { %>
                <div class="channel-card" data-name="<%= channel.name %>" data-tags="<%= (channel.tags || []).join(',').toLowerCase() %>" data-owner="<%= channel.owner %>" data-channel-id="<%= channel.id %>">
                            <div class="vote-badge">
                                <span style="color: #9fd3c7;">‚ñ≤ <span id="up-<%= channel.id %>"><%= channel.upvotes || 0 %></span></span>
                                <span style="color: #f6a5a5;">‚ñº <span id="down-<%= channel.id %>"><%= channel.downvotes || 0 %></span></span>
                            </div>
                            <div class="channel-header">
                                <h2 class="channel-name"><%= channel.name %></h2>
                                <p class="channel-subject"><%= channel.subject %></p>
                            </div>
                            
                            <p class="channel-description">
                                <%= channel.description %>
                            </p>

                            <% if (channel.tags && channel.tags.length > 0) { %>
                                <div class="channel-tags">
                                    <% channel.tags.forEach(tag => { %>
                                        <span class="tag-pill"><%= tag %></span>
                                    <% }) %>
                                </div>
                            <% } %>
                            
                            <div class="channel-footer">
                                <div>
                                    <span class="member-count" style="visibility: hidden; height: 0;">
                                        <i class="fas fa-users"></i>
                                        <span id="member-<%= channel.id %>">0</span> Active
                                    </span>
                                </div>
                                <div style="display:flex; gap:8px; align-items:center;">
                                    <button class="join-btn" onclick="event.stopPropagation(); window.location.href='/dashboard/forumDash/ForumMessaging/<%= channel.id %>'">Join Channel</button>
                                    <button class="create-channel-btn" style="padding:6px 10px; font-size:0.9em;" onclick="event.stopPropagation(); upvoteChannel('<%= channel.id %>')">Upvote</button>
                                    <button class="create-channel-btn" style="padding:6px 10px; font-size:0.9em;" onclick="event.stopPropagation(); downvoteChannel('<%= channel.id %>')">Downvote</button>
                                    <% if (channel.owner === user.username) { %>
                                        <button class="back-btn" style="padding:6px 10px; font-size:0.9em; background:#6a1ba3;" onclick="event.stopPropagation(); deleteChannel('<%= channel.id %>')">Delete</button>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                            <% }) %>
                        </div>
                        <% } %>
                    </section>
                </main>
                
                <script>
                    const searchInput = document.getElementById('channelSearch');
                    const channelGrid = document.querySelector('.channels-grid');
                    const myServersBtn = document.getElementById('myServersBtn');
                    const sortBtn = document.getElementById('sortBtn');
                    let isShowingMyServers = false;
                    let isSortingByVotes = false;
                    const username = '<%= user.username %>';
                    
                    // Track active users per channel via Socket.IO
                    const channelUserCounts = {};
                    let socket = null;
                    
                    // Initialize Socket.IO connection for real-time active user tracking
                    function initializeSocketIO() {
                        // Check if socket.io is loaded
                        if (typeof io !== 'undefined' && !socket) {
                            socket = io();
                            
                            // Listen for active users updates from channels
                            socket.on('channelUserCountUpdate', (data) => {
                                const { channelId, count } = data;
                                channelUserCounts[channelId] = count;
                                const activeSpan = document.getElementById('active-' + channelId);
                                if (activeSpan) {
                                    activeSpan.textContent = count;
                                }
                            });
                            
                            // Periodically check all channels for active users
                            // (This will be emitted by the server when users join/leave rooms)
                            socket.on('connect', () => {
                                console.log('Dashboard socket connected for tracking');
                            });
                        } else if (typeof io === 'undefined') {
                            // Retry if socket.io not ready
                            setTimeout(initializeSocketIO, 100);
                        }
                    }
                    
                    // Start tracking on page load
                    setTimeout(initializeSocketIO, 500);
                    
                    if (searchInput) {
                        searchInput.addEventListener('keyup', (e) => {
                            const searchTerm = e.target.value.toLowerCase().trim();
                            
                            if (channelGrid) {
                                const cards = channelGrid.querySelectorAll('.channel-card');
                                
                                cards.forEach(card => {
                                    const name = card.getAttribute('data-name').toLowerCase();
                                    const tags = card.getAttribute('data-tags');
                                    const owner = card.getAttribute('data-owner');
                                    
                                    // Apply both search and my-servers filter
                                    const matchesSearch = !searchTerm || name.includes(searchTerm) || tags.includes(searchTerm);
                                    const matchesFilter = !isShowingMyServers || owner === username;
                                    
                                    card.style.display = (matchesSearch && matchesFilter) ? 'flex' : 'none';
                                });
                            }
                        });
                    }

                    // -- Toggle My Servers Filter --
                    function toggleMyServers() {
                        isShowingMyServers = !isShowingMyServers;
                        
                        // Update button style
                        myServersBtn.style.opacity = isShowingMyServers ? '1' : '0.7';
                        myServersBtn.style.boxShadow = isShowingMyServers ? '0 0 12px rgba(0, 123, 255, 0.6)' : 'none';
                        
                        // Re-apply filters
                        if (channelGrid) {
                            const cards = channelGrid.querySelectorAll('.channel-card');
                            const searchTerm = (searchInput?.value || '').toLowerCase().trim();
                            
                            cards.forEach(card => {
                                const name = card.getAttribute('data-name').toLowerCase();
                                const tags = card.getAttribute('data-tags');
                                const owner = card.getAttribute('data-owner');
                                
                                const matchesSearch = !searchTerm || name.includes(searchTerm) || tags.includes(searchTerm);
                                const matchesFilter = !isShowingMyServers || owner === username;
                                
                                card.style.display = (matchesSearch && matchesFilter) ? 'flex' : 'none';
                            });
                        }
                    }

                    // -- Toggle Sort by Votes --
                    function toggleSortByVotes() {
                        isSortingByVotes = !isSortingByVotes;
                        
                        // Update button style
                        sortBtn.style.opacity = isSortingByVotes ? '1' : '0.7';
                        sortBtn.style.boxShadow = isSortingByVotes ? '0 0 12px rgba(138, 43, 226, 0.6)' : 'none';
                        
                        // Sort the cards
                        if (channelGrid) {
                            const cards = Array.from(channelGrid.querySelectorAll('.channel-card'));
                            
                            if (isSortingByVotes) {
                                // Sort by net votes (upvotes - downvotes) in descending order
                                cards.sort((a, b) => {
                                    const aUpvotes = parseInt(a.querySelector('[id^="up-"]').textContent) || 0;
                                    const aDownvotes = parseInt(a.querySelector('[id^="down-"]').textContent) || 0;
                                    const bUpvotes = parseInt(b.querySelector('[id^="up-"]').textContent) || 0;
                                    const bDownvotes = parseInt(b.querySelector('[id^="down-"]').textContent) || 0;
                                    
                                    const aNet = aUpvotes - aDownvotes;
                                    const bNet = bUpvotes - bDownvotes;
                                    
                                    return bNet - aNet; // Descending order
                                });
                            } else {
                                // Restore original order by reloading or resetting
                                location.reload();
                            }
                            
                            // Reorder cards in DOM
                            cards.forEach(card => {
                                channelGrid.appendChild(card);
                            });
                        }
                    }

                    // -- Channel actions --
                    async function upvoteChannel(id) {
                        try {
                            const res = await fetch(`/dashboard/forumDash/api/${id}/upvote`, { method: 'POST' });
                            const data = await res.json();
                            if (res.ok) {
                                document.getElementById('up-' + id).innerText = data.upvotes;
                                document.getElementById('down-' + id).innerText = data.downvotes;
                            } else {
                                alert(data.error || 'Upvote failed');
                            }
                        } catch (err) {
                            console.error(err);
                            alert('Network error');
                        }
                    }

                    async function downvoteChannel(id) {
                        try {
                            const res = await fetch(`/dashboard/forumDash/api/${id}/downvote`, { method: 'POST' });
                            const data = await res.json();
                            if (res.ok) {
                                document.getElementById('up-' + id).innerText = data.upvotes;
                                document.getElementById('down-' + id).innerText = data.downvotes;
                            } else {
                                alert(data.error || 'Downvote failed');
                            }
                        } catch (err) {
                            console.error(err);
                            alert('Network error');
                        }
                    }

                    async function deleteChannel(id) {
                        if (!confirm('Are you sure you want to delete this channel? This action cannot be undone.')) return;
                        try {
                            const res = await fetch(`/dashboard/forumDash/api/${id}`, { method: 'DELETE' });
                            const data = await res.json();
                            if (res.ok) {
                                location.reload();
                            } else {
                                alert(data.error || 'Delete failed');
                            }
                        } catch (err) {
                            console.error(err);
                            alert('Network error');
                        }
                    }
                    </script>
</body>
</html>
