<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Create Support Ticket | UniVerse</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
  <style>
    @import url("https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&family=Orbitron:wght@400;700&display=swap");
    :root {
      --dark-bg: #050818;
      --dark-card: #11162b;
      --primary-blue: #00b4ff;
      --accent-violet: #b832ff;
      --text-light: #e0e7ff;
      --subtle: #9aa3d8;
      --success: #2ed573;
      --danger: #ff4757;
    }

    body {
      margin: 0;
      font-family: Montserrat, sans-serif;
      background: radial-gradient(circle at top, #1b1f3b 0%, #050818 50%, #020312 100%);
      color: var(--text-light);
      min-height: 100vh;
    }

    .navbar {
      background: rgba(17, 22, 43, 0.85);
      border-bottom: 1px solid rgba(184, 50, 255, 0.4);
      padding: 18px 40px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      backdrop-filter: blur(6px);
      position: sticky;
      top: 0;
      z-index: 100;
    }

    .logo {
      font-family: Orbitron, sans-serif;
      font-size: 2em;
      font-weight: 700;
      background: linear-gradient(45deg, var(--primary-blue), var(--accent-violet));
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      cursor: pointer;
    }

    .navbar-buttons {
      display: flex;
      gap: 15px;
      align-items: center;
    }

    .btn {
      background: linear-gradient(90deg, var(--primary-blue), var(--accent-violet));
      color: #fff;
      border: 0;
      border-radius: 10px;
      padding: 10px 18px;
      font-weight: 700;
      cursor: pointer;
      text-decoration: none;
      display: inline-block;
      transition: transform 0.3s ease;
      font-family: Montserrat, sans-serif;
    }

    .btn:hover {
      transform: translateY(-2px);
    }

    .btn-secondary {
      background: rgba(0, 180, 255, 0.2);
      border: 1px solid rgba(0, 180, 255, 0.5);
      color: var(--primary-blue);
    }

    .container {
      max-width: 800px;
      margin: 40px auto;
      padding: 0 25px;
    }

    h1 {
      font-family: Orbitron, sans-serif;
      text-shadow: 0 0 12px rgba(0, 180, 255, 0.6);
      margin-bottom: 10px;
    }

    .subtitle {
      color: var(--subtle);
      margin-bottom: 30px;
      font-size: 1.05em;
    }

    .form-section {
      background: rgba(17, 22, 43, 0.65);
      border: 1px solid rgba(0, 180, 255, 0.35);
      border-radius: 14px;
      padding: 35px;
      box-shadow: 0 10px 35px rgba(0, 0, 0, 0.45);
      backdrop-filter: blur(5px);
    }

    .form-group {
      margin-bottom: 25px;
    }

    .form-label {
      display: block;
      margin-bottom: 10px;
      color: var(--primary-blue);
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      font-size: 0.95em;
    }

    .form-input,
    .form-select,
    .form-textarea {
      width: 100%;
      padding: 14px 16px;
      background: rgba(0, 0, 0, 0.3);
      border: 1px solid rgba(0, 180, 255, 0.3);
      border-radius: 8px;
      color: var(--text-light);
      font-family: Montserrat, sans-serif;
      font-size: 0.95em;
      box-sizing: border-box;
    }

    .form-input::placeholder,
    .form-textarea::placeholder {
      color: var(--subtle);
    }

    .form-input:focus,
    .form-select:focus,
    .form-textarea:focus {
      outline: none;
      border-color: var(--primary-blue);
      box-shadow: 0 0 12px rgba(0, 180, 255, 0.3);
    }

    .form-textarea {
      min-height: 150px;
      resize: vertical;
      font-family: Montserrat, sans-serif;
    }

    .help-text {
      color: var(--subtle);
      font-size: 0.85em;
      margin-top: 6px;
    }

    .form-group-row {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 20px;
    }

    .message {
      padding: 16px 20px;
      border-radius: 10px;
      margin-bottom: 25px;
      display: none;
    }

    .success-message {
      display: block;
      background: rgba(46, 213, 115, 0.1);
      border: 1px solid rgba(46, 213, 115, 0.5);
      color: var(--success);
    }

    .error-message {
      display: block;
      background: rgba(255, 71, 87, 0.1);
      border: 1px solid rgba(255, 71, 87, 0.5);
      color: var(--danger);
    }

    .form-buttons {
      display: flex;
      gap: 15px;
      justify-content: flex-end;
      margin-top: 30px;
      padding-top: 25px;
      border-top: 1px solid rgba(0, 180, 255, 0.2);
    }

    .btn-submit {
      background: linear-gradient(90deg, var(--primary-blue), var(--accent-violet));
      padding: 14px 32px;
      font-size: 1em;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .btn-cancel {
      background: rgba(0, 180, 255, 0.2);
      border: 1px solid rgba(0, 180, 255, 0.5);
      color: var(--primary-blue);
      padding: 14px 32px;
      border-radius: 10px;
      cursor: pointer;
      font-weight: 700;
      font-family: Montserrat, sans-serif;
      transition: transform 0.3s ease;
    }

    .btn-cancel:hover {
      transform: translateY(-2px);
    }

    .info-box {
      background: rgba(0, 180, 255, 0.1);
      border: 1px solid rgba(0, 180, 255, 0.3);
      border-radius: 10px;
      padding: 16px;
      margin-bottom: 25px;
      color: var(--text-light);
      font-size: 0.95em;
      line-height: 1.6;
    }

    .info-box strong {
      color: var(--primary-blue);
    }

    .loading {
      display: none;
    }

    .spinner {
      display: inline-block;
      width: 16px;
      height: 16px;
      border: 2px solid rgba(255, 255, 255, 0.3);
      border-radius: 50%;
      border-top-color: #fff;
      animation: spin 0.8s linear infinite;
    }

    @keyframes spin {
      to {
        transform: rotate(360deg);
      }
    }

    .file-input {
      display: none;
    }

    .file-upload-container {
      position: relative;
      margin-bottom: 15px;
    }

    .file-upload-label {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: 10px;
      padding: 40px;
      background: rgba(0, 180, 255, 0.05);
      border: 2px dashed rgba(0, 180, 255, 0.3);
      border-radius: 8px;
      cursor: pointer;
      transition: all 0.3s ease;
      font-size: 1em;
    }

    .file-upload-label:hover {
      background: rgba(0, 180, 255, 0.1);
      border-color: rgba(0, 180, 255, 0.6);
    }

    .file-upload-label i {
      font-size: 2.5em;
      color: var(--primary-blue);
    }

    .file-upload-label span {
      color: var(--text-light);
      font-weight: 600;
    }

    .file-help-text {
      color: var(--subtle);
      font-size: 0.85em;
      margin-top: 5px;
    }

    .file-preview {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
      gap: 12px;
      margin-top: 15px;
    }

    .preview-item {
      position: relative;
      border-radius: 6px;
      overflow: hidden;
      background: rgba(0, 180, 255, 0.1);
      border: 1px solid rgba(0, 180, 255, 0.3);
    }

    .preview-item img {
      width: 100%;
      height: 100px;
      object-fit: cover;
    }

    .preview-remove {
      position: absolute;
      top: 4px;
      right: 4px;
      background: rgba(255, 71, 87, 0.8);
      color: white;
      border: none;
      border-radius: 50%;
      width: 24px;
      height: 24px;
      cursor: pointer;
      font-size: 0.8em;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .preview-remove:hover {
      background: rgba(255, 71, 87, 1);
    }

    .success-page {
      display: none;
      text-align: center;
      padding: 60px 20px;
    }

    .success-icon {
      font-size: 4em;
      color: var(--success);
      margin-bottom: 20px;
    }

    .success-text {
      font-family: Orbitron, sans-serif;
      font-size: 1.8em;
      color: var(--primary-blue);
      margin-bottom: 15px;
    }

    .success-description {
      color: var(--subtle);
      margin-bottom: 30px;
      font-size: 1.05em;
    }

    @media (max-width: 768px) {
      .form-group-row {
        grid-template-columns: 1fr;
      }

      .form-buttons {
        flex-direction: column;
      }

      .btn-submit,
      .btn-cancel {
        width: 100%;
        justify-content: center;
      }

      h1 {
        font-size: 1.8em;
      }

      .container {
        margin: 20px auto;
      }

      .form-section {
        padding: 20px;
      }
    }
  </style>
</head>
<body>
  <nav class="navbar">
    <div class="logo" onclick="window.location.href='/api/dashboard'">UniVerse</div>
    <div class="navbar-buttons">
      <button class="btn btn-secondary" onclick="window.location.href='/api/dashboard'">
        ‚Üê Back to Dashboard
      </button>
      <form action="/api/logout" method="get" style="margin: 0">
        <button class="btn" type="submit">Logout</button>
      </form>
    </div>
  </nav>

  <div class="container">
    <h1>üé´ Create Support Ticket</h1>
    <p class="subtitle">Report an issue or request assistance from our support team</p>

    <!-- Form Container -->
    <div id="formContainer">
      <div id="messageContainer"></div>

      <div class="info-box">
        <strong>üìå Need Help?</strong> Use this form to create a support ticket. Our admin team will review your request
        and get back to you as soon as possible. For urgent issues, set the priority to High or Critical.
      </div>

      <form id="ticketForm" class="form-section" enctype="multipart/form-data">
        <div class="form-group">
          <label class="form-label" for="title">Ticket Title</label>
          <input
            type="text"
            id="title"
            class="form-input"
            placeholder="Brief summary of your issue..."
            required
            maxlength="100"
          />
          <div class="help-text">Keep it concise and descriptive (max 100 characters)</div>
        </div>

        <div class="form-group-row">
          <div class="form-group">
            <label class="form-label" for="category">Category</label>
            <select id="category" class="form-select" required onchange="toggleReportedUserField()">
              <option value="general">General Question</option>
              <option value="technical">Technical Issue</option>
              <option value="account">Account Problem</option>
              <option value="bug">Bug Report</option>
              <option value="feature">Feature Request</option>
              <option value="report_user">Report User</option>
            </select>
          </div>

          <div class="form-group">
            <label class="form-label" for="priority">Priority</label>
            <select id="priority" class="form-select" required>
              <option value="low">Low</option>
              <option value="medium" selected>Medium</option>
              <option value="high">High</option>
              <option value="critical">Critical</option>
            </select>
          </div>
        </div>

        <div id="reportedUserSection" class="form-group" style="display: none;">
          <label class="form-label" for="reportedUser">Username of User Being Reported</label>
          <input
            type="text"
            id="reportedUser"
            class="form-input"
            placeholder="Enter the username of the user you're reporting..."
            maxlength="50"
          />
          <div class="help-text">Provide the exact username of the user whose behavior you're reporting</div>
        </div>

        <div class="form-group">
          <label class="form-label" for="description">Description</label>
          <textarea
            id="description"
            class="form-textarea"
            placeholder="Describe your issue in detail. Include any error messages, steps to reproduce, or additional context..."
            required
            maxlength="2000"
          ></textarea>
          <div class="help-text" id="charCount">0 / 2000 characters</div>
        </div>

        <div class="form-group">
          <label class="form-label" for="screenshots">Screenshots (Optional)</label>
          <div class="file-upload-container">
            <input
              type="file"
              id="screenshots"
              class="file-input"
              accept="image/*"
              multiple
            />
            <label for="screenshots" class="file-upload-label">
              <i class="fas fa-cloud-upload-alt"></i>
              <span>Click to upload or drag and drop screenshots here</span>
              <div class="file-help-text">PNG, JPG, GIF up to 5MB each (max 3 files)</div>
            </label>
            <div id="filePreview" class="file-preview"></div>
          </div>
        </div>

        <div class="form-buttons">
          <button type="button" class="btn-cancel" onclick="window.location.href='/api/dashboard'">Cancel</button>
          <button type="submit" class="btn-submit" id="submitBtn">
            <i class="fas fa-paper-plane"></i>
            <span>Submit Ticket</span>
          </button>
        </div>
      </form>
    </div>

    <!-- Success Page -->
    <div id="successContainer" class="success-page">
      <div class="success-icon">‚úÖ</div>
      <div class="success-text">Ticket Created Successfully!</div>
      <div class="success-description">
        Your support ticket has been submitted. Our admin team will review it shortly.
      </div>
      <button class="btn" onclick="window.location.href='/api/dashboard'">Return to Dashboard</button>
    </div>
  </div>

  <script>
    let selectedFiles = [];

    // Toggle reported user field visibility based on category
    function toggleReportedUserField() {
      const category = document.getElementById('category').value;
      const reportedUserSection = document.getElementById('reportedUserSection');
      const reportedUserInput = document.getElementById('reportedUser');
      
      if (category === 'report_user') {
        reportedUserSection.style.display = 'block';
        reportedUserInput.required = true;
      } else {
        reportedUserSection.style.display = 'none';
        reportedUserInput.required = false;
        reportedUserInput.value = '';
      }
    }

    // Character counter for description
    document.getElementById('description').addEventListener('input', function () {
      const count = this.value.length;
      document.getElementById('charCount').textContent = `${count} / 2000 characters`;
    });

    // File input change handler
    document.getElementById('screenshots').addEventListener('change', function (e) {
      const files = Array.from(e.target.files);
      
      if (files.length + selectedFiles.length > 3) {
        showMessage('Maximum 3 files allowed', 'error');
        return;
      }

      files.forEach(file => {
        if (file.size > 5 * 1024 * 1024) {
          showMessage(`File ${file.name} is too large (max 5MB)`, 'error');
          return;
        }

        if (!file.type.startsWith('image/')) {
          showMessage(`${file.name} is not an image file`, 'error');
          return;
        }

        selectedFiles.push(file);
      });

      updateFilePreview();
      this.value = '';
    });

    // Drag and drop support
    const fileLabel = document.querySelector('.file-upload-label');
    ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
      fileLabel.addEventListener(eventName, preventDefaults, false);
    });

    function preventDefaults(e) {
      e.preventDefault();
      e.stopPropagation();
    }

    ['dragenter', 'dragover'].forEach(eventName => {
      fileLabel.addEventListener(eventName, () => {
        fileLabel.style.background = 'rgba(0, 180, 255, 0.15)';
        fileLabel.style.borderColor = 'rgba(0, 180, 255, 0.8)';
      }, false);
    });

    ['dragleave', 'drop'].forEach(eventName => {
      fileLabel.addEventListener(eventName, () => {
        fileLabel.style.background = 'rgba(0, 180, 255, 0.05)';
        fileLabel.style.borderColor = 'rgba(0, 180, 255, 0.3)';
      }, false);
    });

    fileLabel.addEventListener('drop', (e) => {
      const dt = e.dataTransfer;
      const files = dt.files;
      document.getElementById('screenshots').files = files;
      
      const event = new Event('change', { bubbles: true });
      document.getElementById('screenshots').dispatchEvent(event);
    }, false);

    function updateFilePreview() {
      const preview = document.getElementById('filePreview');
      preview.innerHTML = '';

      selectedFiles.forEach((file, index) => {
        const reader = new FileReader();
        reader.onload = (e) => {
          const item = document.createElement('div');
          item.className = 'preview-item';
          item.innerHTML = `
            <img src="${e.target.result}" alt="Preview" />
            <button class="preview-remove" onclick="removeFile(${index})">‚úï</button>
          `;
          preview.appendChild(item);
        };
        reader.readAsDataURL(file);
      });
    }

    function removeFile(index) {
      selectedFiles.splice(index, 1);
      updateFilePreview();
    }

    // Form submission
    document.getElementById('ticketForm').addEventListener('submit', async function (e) {
      e.preventDefault();

      const submitBtn = document.getElementById('submitBtn');
      const originalText = submitBtn.innerHTML;
      submitBtn.disabled = true;
      submitBtn.innerHTML = '<div class="spinner"></div> Creating...';

      const formData = new FormData();
      formData.append('title', document.getElementById('title').value);
      formData.append('description', document.getElementById('description').value);
      formData.append('category', document.getElementById('category').value);
      formData.append('priority', document.getElementById('priority').value);
      formData.append('reportedUserName', document.getElementById('reportedUser').value);

      // Add files to form data
      selectedFiles.forEach(file => {
        formData.append('screenshots', file);
      });

      try {
        const response = await fetch('/api/tickets/create', {
          method: 'POST',
          body: formData,
        });

        const data = await response.json();

        if (data.success) {
          document.getElementById('formContainer').style.display = 'none';
          document.getElementById('successContainer').style.display = 'block';
        } else {
          showMessage(data.message || 'Failed to create ticket', 'error');
          submitBtn.disabled = false;
          submitBtn.innerHTML = originalText;
        }
      } catch (error) {
        console.error('Error:', error);
        showMessage('An error occurred while creating the ticket', 'error');
        submitBtn.disabled = false;
        submitBtn.innerHTML = originalText;
      }
    });

    function showMessage(message, type) {
      const messageContainer = document.getElementById('messageContainer');
      const messageDiv = document.createElement('div');
      messageDiv.className = `message ${type}-message`;
      messageDiv.textContent = message;
      messageContainer.innerHTML = '';
      messageContainer.appendChild(messageDiv);
      messageDiv.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
      setTimeout(() => messageDiv.remove(), 6000);
    }
  </script>
</body>
</html>
