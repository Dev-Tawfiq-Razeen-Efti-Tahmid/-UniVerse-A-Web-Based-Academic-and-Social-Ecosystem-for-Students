<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Social Hub - Student Portal</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/socialHub.css" />
  </head>
  <body>
    <div class="top-bar">
      <div class="logo"><i class="fas fa-share-alt"></i> Social Hub</div>
      <button class="back-btn" onclick="window.location.href='/api/dashboard'">
        <i class="fas fa-arrow-left"></i> Dashboard
      </button>
    </div>

    <div class="main-content">
      <div class="page-header">
        <div class="page-title"><i class="fas fa-users"></i> Find Friends</div>
        <div class="action-buttons">
          <button class="action-btn" onclick="window.location.href='/api/chat'">
            <i class="fa-solid fa-message"></i> Chatting
          </button>
          <button class="action-btn secondary" onclick="loadPendingRequests()">
            <i class="fas fa-clock"></i> Requests
            <span class="badge" id="requestBadge" style="display: none"></span>
          </button>
          <button class="action-btn" onclick="loadFriendList()">
            <i class="fas fa-user-friends"></i> My Friends
          </button>
        </div>
      </div>

      <div class="search-wrapper">
        <input
          type="text"
          class="search-input"
          id="searchInput"
          placeholder="Search by name or username..."
        />
        <div id="searchResults" class="results-container"></div>
      </div>
    </div>

    <div id="friendListModal" class="modal">
      <div class="modal-content">
        <div class="modal-header">
          <h2><i class="fas fa-user-friends"></i> My Friends</h2>
          <button class="close-btn" onclick="closeFriendList()">&times;</button>
        </div>
        <div id="friendListContent"></div>
      </div>
    </div>

    <div id="requestsModal" class="modal">
      <div class="modal-content">
        <div class="modal-header">
          <h2><i class="fas fa-clock"></i> Friend Requests</h2>
          <button class="close-btn" onclick="closeRequests()">&times;</button>
        </div>
        <div id="requestsContent"></div>
      </div>
    </div>

    <script>
      let searchTimeout;

      function showToast(msg, type = "info") {
        const existing = document.querySelector(".toast");
        if (existing) existing.remove();

        const icons = {
          success: "fa-check-circle",
          error: "fa-exclamation-circle",
          info: "fa-info-circle",
        };
        const titles = { success: "Success", error: "Error", info: "Info" };

        const toast = document.createElement("div");
        toast.className = `toast ${type}`;
        toast.innerHTML = `
        <i class="fas ${icons[type]} toast-icon"></i>
        <div class="toast-content">
          <div class="toast-title">${titles[type]}</div>
          <div class="toast-message">${msg}</div>
        </div>
        <button class="toast-close" onclick="this.parentElement.remove()"><i class="fas fa-times"></i></button>
      `;
        document.body.appendChild(toast);
        setTimeout(() => toast.remove(), 3000);
      }

      function showConfirmDialog(title, msg, onConfirm) {
        const existing = document.querySelector(".confirm-dialog");
        if (existing) existing.remove();

        const dialog = document.createElement("div");
        dialog.className = "confirm-dialog";
        dialog.innerHTML = `
        <div class="confirm-dialog-content">
          <div class="confirm-dialog-header">
            <i class="fas fa-exclamation-triangle confirm-dialog-icon"></i>
            <div class="confirm-dialog-title">${title}</div>
          </div>
          <div class="confirm-dialog-message">${msg}</div>
          <div class="confirm-dialog-actions">
            <button class="confirm-btn confirm-btn-cancel" onclick="this.closest('.confirm-dialog').remove()">Cancel</button>
            <button class="confirm-btn confirm-btn-confirm" id="confirmBtn">Confirm</button>
          </div>
        </div>
      `;
        document.body.appendChild(dialog);
        setTimeout(() => dialog.classList.add("show"), 10);
        document.getElementById("confirmBtn").onclick = () => {
          dialog.remove();
          onConfirm();
        };
        dialog.onclick = (e) => {
          if (e.target === dialog) dialog.remove();
        };
      }

      document.getElementById("searchInput").addEventListener("input", (e) => {
        clearTimeout(searchTimeout);
        const query = e.target.value.trim();
        if (!query) {
          document.getElementById("searchResults").innerHTML = "";
          return;
        }
        searchTimeout = setTimeout(() => searchUsers(query), 300);
      });

      async function searchUsers(query) {
        try {
          const res = await fetch(
            `/api/dashboard/social/search?query=${encodeURIComponent(query)}`
          );
          const data = await res.json();
          displaySearchResults(data.users);
        } catch (err) {
          console.error("Error:", err);
        }
      }

      function displaySearchResults(users) {
        const container = document.getElementById("searchResults");
        if (!users.length) {
          container.innerHTML =
            '<div class="empty-state"><i class="fas fa-search"></i><h3>No users found</h3></div>';
          return;
        }
        container.innerHTML = users
          .map(
            (u) => `
        <div class="user-card">
          <div class="user-info">
            <div class="user-avatar">${
              u.profilePic
                ? `<img src="${u.profilePic}" alt="${u.name}">`
                : u.name.charAt(0).toUpperCase()
            }</div>
            <div class="user-details">
              <h3>${u.name}</h3>
              <p>@${u.username}</p>
              <span class="department-badge">${u.department}</span>
            </div>
          </div>
          ${getActionButton(u)}
        </div>
      `
          )
          .join("");
      }

      function getActionButton(u) {
        if (u.friendStatus === "friends")
          return `<button class="card-action-btn remove-friend-btn" onclick="removeFriend('${u._id}')"><i class="fas fa-user-minus"></i> Unfriend</button>`;
        if (u.friendStatus === "requested")
          return `<button class="card-action-btn requested-btn" disabled><i class="fas fa-clock"></i> Request Sent</button>`;
        if (u.friendStatus === "pending")
          return `<button class="card-action-btn accept-btn" onclick="acceptRequestFromSearch('${u.requestId}')"><i class="fas fa-user-check"></i> Accept</button>`;
        return `<button class="card-action-btn add-friend-btn" onclick="sendRequest('${u._id}')"><i class="fas fa-user-plus"></i> Add Friend</button>`;
      }

      async function sendRequest(id) {
        try {
          const res = await fetch("/api/dashboard/social/friend-request", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ recipientId: id }),
          });
          const data = await res.json();
          showToast(
            res.ok
              ? data.message || "Friend request sent!"
              : data.error || "Failed to send request",
            res.ok ? "success" : "error"
          );
          const query = document.getElementById("searchInput").value;
          if (query) searchUsers(query);
        } catch (err) {
          showToast("Something went wrong", "error");
        }
      }

      async function acceptRequestFromSearch(id) {
        try {
          const res = await fetch("/api/dashboard/social/accept-request", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ requestId: id }),
          });
          const data = await res.json();
          showToast(
            res.ok
              ? data.message || "Request accepted!"
              : data.error || "Failed to accept",
            res.ok ? "success" : "error"
          );
          const query = document.getElementById("searchInput").value;
          if (query) searchUsers(query);
          updateRequestBadge();
        } catch (err) {
          showToast("Something went wrong", "error");
        }
      }

      async function removeFriend(id, callback) {
        showConfirmDialog(
          "Remove Friend?",
          "Are you sure you want to remove this friend?",
          async () => {
            try {
              const res = await fetch("/api/dashboard/social/remove-friend", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ friendId: id }),
              });
              const data = await res.json();
              showToast(
                res.ok
                  ? data.message || "Friend removed"
                  : data.error || "Failed to remove",
                res.ok ? "success" : "error"
              );
              const query = document.getElementById("searchInput").value;
              if (query) searchUsers(query);
              if (callback) callback();
            } catch (err) {
              showToast("Something went wrong", "error");
            }
          }
        );
      }

      async function loadFriendList() {
        const modal = document.getElementById("friendListModal");
        const content = document.getElementById("friendListContent");
        modal.classList.add("active");
        content.innerHTML =
          '<div class="loading"><i class="fas fa-spinner"></i><p>Loading...</p></div>';
        try {
          const res = await fetch("/api/dashboard/social/friends");
          const data = await res.json();
          if (!data.friends.length) {
            content.innerHTML =
              '<div class="empty-state"><i class="fas fa-user-friends"></i><h3>No friends yet</h3></div>';
            return;
          }
          content.innerHTML = data.friends
            .map(
              (f) => `
          <div class="user-card">
            <div class="user-info">
              <div class="user-avatar">${
                f.profilePic
                  ? `<img src="${f.profilePic}" alt="${f.name}">`
                  : f.name.charAt(0).toUpperCase()
              }</div>
              <div class="user-details">
                <h3>${f.name}</h3>
                <p>@${f.username}</p>
                <span class="department-badge">${f.department}</span>
              </div>
            </div>
            <button class="card-action-btn remove-friend-btn" onclick="removeFriend('${
              f._id
            }', loadFriendList)"><i class="fas fa-user-minus"></i> Remove</button>
          </div>
        `
            )
            .join("");
        } catch (err) {
          content.innerHTML =
            '<div class="empty-state"><p>Error loading friends</p></div>';
        }
      }

      function closeFriendList() {
        document.getElementById("friendListModal").classList.remove("active");
      }

      async function loadPendingRequests() {
        const modal = document.getElementById("requestsModal");
        const content = document.getElementById("requestsContent");
        modal.classList.add("active");
        content.innerHTML =
          '<div class="loading"><i class="fas fa-spinner"></i><p>Loading...</p></div>';
        try {
          const res = await fetch("/api/dashboard/social/requests/pending");
          const data = await res.json();
          if (!data.requests.length) {
            content.innerHTML =
              '<div class="empty-state"><i class="fas fa-inbox"></i><h3>No pending requests</h3></div>';
            return;
          }
          content.innerHTML = data.requests
            .map(
              (r) => `
          <div class="user-card">
            <div class="user-info">
              <div class="user-avatar">${
                r.requester.profilePic
                  ? `<img src="${r.requester.profilePic}" alt="${r.requester.name}">`
                  : r.requester.name.charAt(0).toUpperCase()
              }</div>
              <div class="user-details">
                <h3>${r.requester.name}</h3>
                <p>@${r.requester.username}</p>
                <span class="department-badge">${r.requester.department}</span>
              </div>
            </div>
            <div style="display:flex;gap:10px;flex-wrap:wrap">
              <button class="card-action-btn accept-btn" onclick="acceptRequest('${
                r._id
              }');setTimeout(loadPendingRequests,500)"><i class="fas fa-check"></i> Accept</button>
              <button class="card-action-btn remove-friend-btn" onclick="rejectRequest('${
                r.requester._id
              }');setTimeout(loadPendingRequests,500)"><i class="fas fa-times"></i> Reject</button>
            </div>
          </div>
        `
            )
            .join("");
        } catch (err) {
          content.innerHTML =
            '<div class="empty-state"><p>Error loading requests</p></div>';
        }
      }

      async function acceptRequest(id) {
        try {
          const res = await fetch("/api/dashboard/social/accept-request", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ requestId: id }),
          });
          const data = await res.json();
          showToast(
            res.ok
              ? data.message || "Request accepted!"
              : data.error || "Failed",
            res.ok ? "success" : "error"
          );
          updateRequestBadge();
        } catch (err) {
          showToast("Something went wrong", "error");
        }
      }

      async function rejectRequest(id) {
        showConfirmDialog(
          "Reject Request?",
          "Are you sure you want to reject this request?",
          async () => {
            try {
              const res = await fetch("/api/dashboard/social/remove-friend", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ friendId: id }),
              });
              showToast(
                res.ok ? "Request rejected" : "Failed to reject",
                res.ok ? "info" : "error"
              );
              updateRequestBadge();
            } catch (err) {
              showToast("Something went wrong", "error");
            }
          }
        );
      }
      function closeRequests() {
        document.getElementById("requestsModal").classList.remove("active");
      }
      async function updateRequestBadge() {
        try {
          const res = await fetch("/api/dashboard/social/requests/pending");
          const data = await res.json();
          const badge = document.getElementById("requestBadge");
          badge.style.display =
            data.requests?.length > 0 ? "inline-block" : "none";
          badge.textContent = data.requests?.length || "";
        } catch (err) {
          console.error("Error:", err);
        }
      }
      updateRequestBadge();
      window.onclick = (e) => {
        if (e.target == document.getElementById("friendListModal"))
          closeFriendList();
        if (e.target == document.getElementById("requestsModal"))
          closeRequests();
      };
    </script>
  </body>
</html>
