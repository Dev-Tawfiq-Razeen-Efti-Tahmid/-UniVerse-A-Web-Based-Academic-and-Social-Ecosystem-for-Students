<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Social Hub - Student Portal</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&family=Orbitron:wght@400;700&display=swap");
      :root {
        --dark-bg: #1a1a2e;
        --dark-card: #272c4a;
        --primary-blue: #007bff;
        --accent-violet: #8a2be2;
        --text-light: #e0e0e0;
        --input-bg: #3e4a6e;
        --subtle-text: #a0a0a0;
        --success-green: #00c878;
        --danger-red: #ff4757;
      }
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }
      body {
        font-family: "Montserrat", sans-serif;
        min-height: 100vh;
        background: linear-gradient(135deg, var(--dark-bg) 0%, #160e2c 100%);
        color: var(--text-light);
      }
      .top-bar {
        background-color: var(--dark-card);
        padding: 15px 40px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
        border-bottom: 1px solid var(--accent-violet);
        position: sticky;
        top: 0;
        z-index: 1000;
      }
      .logo {
        font-family: "Orbitron", sans-serif;
        font-size: 2em;
        font-weight: 700;
        background: linear-gradient(
          45deg,
          var(--primary-blue),
          var(--accent-violet)
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        display: flex;
        align-items: center;
        gap: 12px;
      }
      .back-btn {
        background: transparent;
        border: 1px solid rgba(0, 123, 255, 0.6);
        color: var(--text-light);
        border-radius: 8px;
        padding: 8px 16px;
        cursor: pointer;
        transition: all 0.3s;
      }
      .back-btn:hover {
        background: rgba(0, 123, 255, 0.15);
        transform: translateY(-1px);
      }
      .main-content {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
      }
      .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
        flex-wrap: wrap;
        gap: 15px;
      }
      .page-title {
        font-family: "Orbitron", sans-serif;
        font-size: 2em;
        display: flex;
        align-items: center;
        gap: 10px;
      }
      .action-buttons {
        display: flex;
        gap: 12px;
      }
      .action-btn {
        background: linear-gradient(
          90deg,
          var(--primary-blue),
          var(--accent-violet)
        );
        color: white;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        gap: 8px;
        position: relative;
      }
      .action-btn:hover {
        transform: translateY(-2px);
      }
      .action-btn.secondary {
        background: linear-gradient(90deg, #f59e0b, #d97706);
      }
      .badge {
        background: var(--danger-red);
        color: white;
        border-radius: 50%;
        padding: 2px 8px;
        font-size: 0.75em;
        position: absolute;
        top: -6px;
        right: -6px;
      }
      .search-wrapper {
        background-color: rgba(23, 27, 54, 0.9);
        border-radius: 16px;
        padding: 24px;
        border: 1px solid rgba(0, 123, 255, 0.25);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
      }
      .search-input {
        width: 100%;
        padding: 15px 20px;
        border: 2px solid rgba(0, 123, 255, 0.4);
        border-radius: 10px;
        background-color: var(--input-bg);
        color: var(--text-light);
        font-size: 1em;
        transition: all 0.3s;
      }
      .search-input:focus {
        outline: none;
        border-color: var(--accent-violet);
      }
      .results-container {
        margin-top: 20px;
      }
      .user-card {
        background-color: var(--dark-card);
        border-radius: 14px;
        padding: 18px;
        margin-bottom: 15px;
        border: 1px solid rgba(0, 123, 255, 0.35);
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 15px;
        transition: all 0.25s;
      }
      .user-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.7);
      }
      .user-info {
        display: flex;
        align-items: center;
        gap: 15px;
        flex: 1;
      }
      .user-avatar {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(
          135deg,
          var(--primary-blue),
          var(--accent-violet)
        );
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 24px;
        font-weight: bold;
      }
      .user-avatar img {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        object-fit: cover;
      }
      .user-details h3 {
        font-size: 1.15em;
        margin-bottom: 5px;
      }
      .user-details p {
        font-size: 0.9em;
        color: var(--subtle-text);
      }
      .department-badge {
        display: inline-block;
        padding: 4px 12px;
        border-radius: 999px;
        font-size: 0.75em;
        background: linear-gradient(90deg, #1e3b70, #29539b);
        border: 1px solid rgba(0, 123, 255, 0.5);
        margin-top: 5px;
      }
      .card-action-btn {
        padding: 10px 20px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-size: 0.9em;
        font-weight: 600;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        gap: 6px;
      }
      .add-friend-btn {
        background: linear-gradient(90deg, var(--success-green), #00a868);
        color: white;
      }
      .add-friend-btn:hover {
        transform: translateY(-2px);
      }
      .requested-btn {
        background: rgba(106, 27, 163, 0.3);
        color: var(--subtle-text);
        cursor: not-allowed;
      }
      .accept-btn {
        background: linear-gradient(90deg, var(--success-green), #00a868);
        color: white;
      }
      .accept-btn:hover {
        transform: translateY(-2px);
      }
      .remove-friend-btn {
        background: linear-gradient(90deg, var(--danger-red), #ee5a6f);
        color: white;
      }
      .remove-friend-btn:hover {
        transform: translateY(-2px);
      }
      .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: var(--subtle-text);
      }
      .empty-state i {
        font-size: 4em;
        margin-bottom: 20px;
        opacity: 0.5;
      }
      .modal {
        display: none;
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.7);
        z-index: 2000;
        justify-content: center;
        align-items: center;
        padding: 20px;
      }
      .modal.active {
        display: flex;
      }
      .modal-content {
        background: linear-gradient(135deg, var(--dark-card) 0%, #1f2447 100%);
        border-radius: 16px;
        padding: 30px;
        max-width: 700px;
        width: 100%;
        max-height: 80vh;
        overflow-y: auto;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.8);
        border: 1px solid rgba(138, 43, 226, 0.4);
      }
      .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
        padding-bottom: 15px;
        border-bottom: 1px solid rgba(0, 123, 255, 0.3);
      }
      .modal-header h2 {
        font-family: "Orbitron", sans-serif;
        font-size: 1.6em;
        display: flex;
        align-items: center;
        gap: 10px;
      }
      .close-btn {
        background: none;
        border: none;
        font-size: 2em;
        cursor: pointer;
        color: var(--subtle-text);
        padding: 0;
        transition: all 0.3s;
      }
      .close-btn:hover {
        color: var(--text-light);
        transform: rotate(90deg);
      }
      .loading {
        text-align: center;
        padding: 40px 20px;
        color: var(--subtle-text);
      }
      .confirm-dialog {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.7);
        z-index: 3500;
        display: none;
        justify-content: center;
        align-items: center;
        padding: 20px;
      }
      .confirm-dialog.show {
        display: flex;
      }
      .confirm-dialog-content {
        background: linear-gradient(135deg, var(--dark-card) 0%, #1f2447 100%);
        border-radius: 16px;
        padding: 30px;
        max-width: 450px;
        width: 100%;
        border: 1px solid rgba(138, 43, 226, 0.4);
      }
      .confirm-dialog-header {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 15px;
      }
      .confirm-dialog-icon {
        font-size: 2em;
        color: var(--danger-red);
      }
      .confirm-dialog-title {
        font-size: 1.3em;
        font-weight: 600;
      }
      .confirm-dialog-message {
        font-size: 0.95em;
        color: var(--subtle-text);
        margin-bottom: 25px;
      }
      .confirm-dialog-actions {
        display: flex;
        gap: 12px;
        justify-content: flex-end;
      }
      .confirm-btn {
        padding: 10px 24px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.3s;
      }
      .confirm-btn-cancel {
        background: transparent;
        border: 1px solid rgba(0, 123, 255, 0.6);
        color: var(--text-light);
      }
      .confirm-btn-cancel:hover {
        background: rgba(0, 123, 255, 0.15);
      }
      .confirm-btn-confirm {
        background: linear-gradient(90deg, var(--danger-red), #ee5a6f);
        color: white;
      }
      .confirm-btn-confirm:hover {
        transform: translateY(-1px);
      }
      .toast {
        position: fixed;
        top: 100px;
        right: 30px;
        background: linear-gradient(135deg, var(--dark-card) 0%, #1f2447 100%);
        color: var(--text-light);
        padding: 16px 24px;
        border-radius: 12px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.6);
        border: 1px solid rgba(0, 123, 255, 0.4);
        display: flex;
        align-items: center;
        gap: 12px;
        min-width: 300px;
        z-index: 3000;
        opacity: 0;
        animation: slideIn 0.4s ease forwards, fadeOut 0.4s ease 2.6s forwards;
      }
      .toast.success {
        border-color: var(--success-green);
      }
      .toast.error {
        border-color: var(--danger-red);
      }
      .toast-icon {
        font-size: 1.5em;
      }
      .toast.success .toast-icon {
        color: var(--success-green);
      }
      .toast.error .toast-icon {
        color: var(--danger-red);
      }
      .toast.info .toast-icon {
        color: var(--primary-blue);
      }
      .toast-content {
        flex: 1;
      }
      .toast-title {
        font-weight: 600;
        margin-bottom: 3px;
      }
      .toast-message {
        font-size: 0.85em;
        color: var(--subtle-text);
      }
      .toast-close {
        background: none;
        border: none;
        color: var(--subtle-text);
        cursor: pointer;
        font-size: 1.2em;
      }
      @keyframes slideIn {
        from {
          transform: translateX(400px);
          opacity: 0;
        }
        to {
          transform: translateX(0);
          opacity: 1;
        }
      }
      @keyframes fadeOut {
        to {
          opacity: 0;
          transform: translateX(400px);
        }
      }
      @media (max-width: 768px) {
        .top-bar {
          padding: 12px 18px;
        }
        .logo {
          font-size: 1.6em;
        }
        .page-title {
          font-size: 1.6em;
        }
        .user-card {
          flex-direction: column;
          align-items: flex-start;
        }
        .card-action-btn {
          width: 100%;
          justify-content: center;
        }
        .toast {
          right: 15px;
          left: 15px;
          min-width: auto;
        }
      }
    </style>
  </head>
  <body>
    <div class="top-bar">
      <div class="logo"><i class="fas fa-share-alt"></i> Social Hub</div>
      <button class="back-btn" onclick="window.location.href='/api/dashboard'">
        <i class="fas fa-arrow-left"></i> Dashboard
      </button>
    </div>

    <div class="main-content">
      <div class="page-header">
        <div class="page-title"><i class="fas fa-users"></i> Find Friends</div>
        <div class="action-buttons">
          <button class="action-btn" onclick="window.location.href='/api/chat'">
            <i class="fa-solid fa-message"></i> Chatting
          </button>
          <button class="action-btn secondary" onclick="loadPendingRequests()">
            <i class="fas fa-clock"></i> Requests
            <span class="badge" id="requestBadge" style="display: none"></span>
          </button>
          <button class="action-btn" onclick="loadFriendList()">
            <i class="fas fa-user-friends"></i> My Friends
          </button>
        </div>
      </div>

      <div class="search-wrapper">
        <input
          type="text"
          class="search-input"
          id="searchInput"
          placeholder="Search by name or username..."
        />
        <div id="searchResults" class="results-container"></div>
      </div>
    </div>

    <div id="friendListModal" class="modal">
      <div class="modal-content">
        <div class="modal-header">
          <h2><i class="fas fa-user-friends"></i> My Friends</h2>
          <button class="close-btn" onclick="closeFriendList()">&times;</button>
        </div>
        <div id="friendListContent"></div>
      </div>
    </div>

    <div id="requestsModal" class="modal">
      <div class="modal-content">
        <div class="modal-header">
          <h2><i class="fas fa-clock"></i> Friend Requests</h2>
          <button class="close-btn" onclick="closeRequests()">&times;</button>
        </div>
        <div id="requestsContent"></div>
      </div>
    </div>

    <script>
      let searchTimeout;

      function showToast(msg, type = "info") {
        const existing = document.querySelector(".toast");
        if (existing) existing.remove();

        const icons = {
          success: "fa-check-circle",
          error: "fa-exclamation-circle",
          info: "fa-info-circle",
        };
        const titles = { success: "Success", error: "Error", info: "Info" };

        const toast = document.createElement("div");
        toast.className = `toast ${type}`;
        toast.innerHTML = `
        <i class="fas ${icons[type]} toast-icon"></i>
        <div class="toast-content">
          <div class="toast-title">${titles[type]}</div>
          <div class="toast-message">${msg}</div>
        </div>
        <button class="toast-close" onclick="this.parentElement.remove()"><i class="fas fa-times"></i></button>
      `;
        document.body.appendChild(toast);
        setTimeout(() => toast.remove(), 3000);
      }

      function showConfirmDialog(title, msg, onConfirm) {
        const existing = document.querySelector(".confirm-dialog");
        if (existing) existing.remove();

        const dialog = document.createElement("div");
        dialog.className = "confirm-dialog";
        dialog.innerHTML = `
        <div class="confirm-dialog-content">
          <div class="confirm-dialog-header">
            <i class="fas fa-exclamation-triangle confirm-dialog-icon"></i>
            <div class="confirm-dialog-title">${title}</div>
          </div>
          <div class="confirm-dialog-message">${msg}</div>
          <div class="confirm-dialog-actions">
            <button class="confirm-btn confirm-btn-cancel" onclick="this.closest('.confirm-dialog').remove()">Cancel</button>
            <button class="confirm-btn confirm-btn-confirm" id="confirmBtn">Confirm</button>
          </div>
        </div>
      `;
        document.body.appendChild(dialog);
        setTimeout(() => dialog.classList.add("show"), 10);
        document.getElementById("confirmBtn").onclick = () => {
          dialog.remove();
          onConfirm();
        };
        dialog.onclick = (e) => {
          if (e.target === dialog) dialog.remove();
        };
      }

      document.getElementById("searchInput").addEventListener("input", (e) => {
        clearTimeout(searchTimeout);
        const query = e.target.value.trim();
        if (!query) {
          document.getElementById("searchResults").innerHTML = "";
          return;
        }
        searchTimeout = setTimeout(() => searchUsers(query), 300);
      });

      async function searchUsers(query) {
        try {
          const res = await fetch(
            `/api/dashboard/social/search?query=${encodeURIComponent(query)}`
          );
          const data = await res.json();
          displaySearchResults(data.users);
        } catch (err) {
          console.error("Error:", err);
        }
      }

      function displaySearchResults(users) {
        const container = document.getElementById("searchResults");
        if (!users.length) {
          container.innerHTML =
            '<div class="empty-state"><i class="fas fa-search"></i><h3>No users found</h3></div>';
          return;
        }
        container.innerHTML = users
          .map(
            (u) => `
        <div class="user-card">
          <div class="user-info">
            <div class="user-avatar">${
              u.profilePic
                ? `<img src="${u.profilePic}" alt="${u.name}">`
                : u.name.charAt(0).toUpperCase()
            }</div>
            <div class="user-details">
              <h3>${u.name}</h3>
              <p>@${u.username}</p>
              <span class="department-badge">${u.department}</span>
            </div>
          </div>
          ${getActionButton(u)}
        </div>
      `
          )
          .join("");
      }

      function getActionButton(u) {
        if (u.friendStatus === "friends")
          return `<button class="card-action-btn remove-friend-btn" onclick="removeFriend('${u._id}')"><i class="fas fa-user-minus"></i> Unfriend</button>`;
        if (u.friendStatus === "requested")
          return `<button class="card-action-btn requested-btn" disabled><i class="fas fa-clock"></i> Request Sent</button>`;
        if (u.friendStatus === "pending")
          return `<button class="card-action-btn accept-btn" onclick="acceptRequestFromSearch('${u.requestId}')"><i class="fas fa-user-check"></i> Accept</button>`;
        return `<button class="card-action-btn add-friend-btn" onclick="sendRequest('${u._id}')"><i class="fas fa-user-plus"></i> Add Friend</button>`;
      }

      async function sendRequest(id) {
        try {
          const res = await fetch("/api/dashboard/social/friend-request", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ recipientId: id }),
          });
          const data = await res.json();
          showToast(
            res.ok
              ? data.message || "Friend request sent!"
              : data.error || "Failed to send request",
            res.ok ? "success" : "error"
          );
          const query = document.getElementById("searchInput").value;
          if (query) searchUsers(query);
        } catch (err) {
          showToast("Something went wrong", "error");
        }
      }

      async function acceptRequestFromSearch(id) {
        try {
          const res = await fetch("/api/dashboard/social/accept-request", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ requestId: id }),
          });
          const data = await res.json();
          showToast(
            res.ok
              ? data.message || "Request accepted!"
              : data.error || "Failed to accept",
            res.ok ? "success" : "error"
          );
          const query = document.getElementById("searchInput").value;
          if (query) searchUsers(query);
          updateRequestBadge();
        } catch (err) {
          showToast("Something went wrong", "error");
        }
      }

      async function removeFriend(id, callback) {
        showConfirmDialog(
          "Remove Friend?",
          "Are you sure you want to remove this friend?",
          async () => {
            try {
              const res = await fetch("/api/dashboard/social/remove-friend", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ friendId: id }),
              });
              const data = await res.json();
              showToast(
                res.ok
                  ? data.message || "Friend removed"
                  : data.error || "Failed to remove",
                res.ok ? "success" : "error"
              );
              const query = document.getElementById("searchInput").value;
              if (query) searchUsers(query);
              if (callback) callback();
            } catch (err) {
              showToast("Something went wrong", "error");
            }
          }
        );
      }

      async function loadFriendList() {
        const modal = document.getElementById("friendListModal");
        const content = document.getElementById("friendListContent");
        modal.classList.add("active");
        content.innerHTML =
          '<div class="loading"><i class="fas fa-spinner"></i><p>Loading...</p></div>';
        try {
          const res = await fetch("/api/dashboard/social/friends");
          const data = await res.json();
          if (!data.friends.length) {
            content.innerHTML =
              '<div class="empty-state"><i class="fas fa-user-friends"></i><h3>No friends yet</h3></div>';
            return;
          }
          content.innerHTML = data.friends
            .map(
              (f) => `
          <div class="user-card">
            <div class="user-info">
              <div class="user-avatar">${
                f.profilePic
                  ? `<img src="${f.profilePic}" alt="${f.name}">`
                  : f.name.charAt(0).toUpperCase()
              }</div>
              <div class="user-details">
                <h3>${f.name}</h3>
                <p>@${f.username}</p>
                <span class="department-badge">${f.department}</span>
              </div>
            </div>
            <button class="card-action-btn remove-friend-btn" onclick="removeFriend('${
              f._id
            }', loadFriendList)"><i class="fas fa-user-minus"></i> Remove</button>
          </div>
        `
            )
            .join("");
        } catch (err) {
          content.innerHTML =
            '<div class="empty-state"><p>Error loading friends</p></div>';
        }
      }

      function closeFriendList() {
        document.getElementById("friendListModal").classList.remove("active");
      }

      async function loadPendingRequests() {
        const modal = document.getElementById("requestsModal");
        const content = document.getElementById("requestsContent");
        modal.classList.add("active");
        content.innerHTML =
          '<div class="loading"><i class="fas fa-spinner"></i><p>Loading...</p></div>';
        try {
          const res = await fetch("/api/dashboard/social/requests/pending");
          const data = await res.json();
          if (!data.requests.length) {
            content.innerHTML =
              '<div class="empty-state"><i class="fas fa-inbox"></i><h3>No pending requests</h3></div>';
            return;
          }
          content.innerHTML = data.requests
            .map(
              (r) => `
          <div class="user-card">
            <div class="user-info">
              <div class="user-avatar">${
                r.requester.profilePic
                  ? `<img src="${r.requester.profilePic}" alt="${r.requester.name}">`
                  : r.requester.name.charAt(0).toUpperCase()
              }</div>
              <div class="user-details">
                <h3>${r.requester.name}</h3>
                <p>@${r.requester.username}</p>
                <span class="department-badge">${r.requester.department}</span>
              </div>
            </div>
            <div style="display:flex;gap:10px;flex-wrap:wrap">
              <button class="card-action-btn accept-btn" onclick="acceptRequest('${
                r._id
              }');setTimeout(loadPendingRequests,500)"><i class="fas fa-check"></i> Accept</button>
              <button class="card-action-btn remove-friend-btn" onclick="rejectRequest('${
                r.requester._id
              }');setTimeout(loadPendingRequests,500)"><i class="fas fa-times"></i> Reject</button>
            </div>
          </div>
        `
            )
            .join("");
        } catch (err) {
          content.innerHTML =
            '<div class="empty-state"><p>Error loading requests</p></div>';
        }
      }

      async function acceptRequest(id) {
        try {
          const res = await fetch("/api/dashboard/social/accept-request", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ requestId: id }),
          });
          const data = await res.json();
          showToast(
            res.ok
              ? data.message || "Request accepted!"
              : data.error || "Failed",
            res.ok ? "success" : "error"
          );
          updateRequestBadge();
        } catch (err) {
          showToast("Something went wrong", "error");
        }
      }

      async function rejectRequest(id) {
        showConfirmDialog(
          "Reject Request?",
          "Are you sure you want to reject this request?",
          async () => {
            try {
              const res = await fetch("/api/dashboard/social/remove-friend", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ friendId: id }),
              });
              showToast(
                res.ok ? "Request rejected" : "Failed to reject",
                res.ok ? "info" : "error"
              );
              updateRequestBadge();
            } catch (err) {
              showToast("Something went wrong", "error");
            }
          }
        );
      }
      function closeRequests() {
        document.getElementById("requestsModal").classList.remove("active");
      }
      async function updateRequestBadge() {
        try {
          const res = await fetch("/api/dashboard/social/requests/pending");
          const data = await res.json();
          const badge = document.getElementById("requestBadge");
          badge.style.display =
            data.requests?.length > 0 ? "inline-block" : "none";
          badge.textContent = data.requests?.length || "";
        } catch (err) {
          console.error("Error:", err);
        }
      }
      updateRequestBadge();
      window.onclick = (e) => {
        if (e.target == document.getElementById("friendListModal"))
          closeFriendList();
        if (e.target == document.getElementById("requestsModal"))
          closeRequests();
      };
    </script>
  </body>
</html>
