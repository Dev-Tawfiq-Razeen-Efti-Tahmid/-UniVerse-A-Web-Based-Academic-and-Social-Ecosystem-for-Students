<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chat - Student Portal</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <script src="/socket.io/socket.io.js"></script>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&family=Orbitron:wght@400;700&display=swap");
      :root {
        --dark-bg: #1a1a2e;
        --dark-card: #272c4a;
        --primary-blue: #007bff;
        --accent-violet: #8a2be2;
        --text-light: #e0e0e0;
        --input-bg: #3e4a6e;
        --subtle-text: #a0a0a0;
        --success-green: #00c878;
      }
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }
      body {
        font-family: "Montserrat", sans-serif;
        height: 100vh;
        background: linear-gradient(135deg, var(--dark-bg) 0%, #160e2c 100%);
        color: var(--text-light);
        overflow: hidden;
      }
      .top-bar {
        background-color: var(--dark-card);
        padding: 15px 40px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
        border-bottom: 1px solid var(--accent-violet);
      }
      .logo {
        font-family: "Orbitron", sans-serif;
        font-size: 2em;
        font-weight: 700;
        background: linear-gradient(
          45deg,
          var(--primary-blue),
          var(--accent-violet)
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        display: flex;
        align-items: center;
        gap: 12px;
      }
      .back-btn {
        background: transparent;
        border: 1px solid rgba(0, 123, 255, 0.6);
        color: var(--text-light);
        border-radius: 8px;
        padding: 8px 16px;
        cursor: pointer;
        transition: all 0.3s;
      }
      .back-btn:hover {
        background: rgba(0, 123, 255, 0.15);
      }
      .chat-container {
        display: flex;
        height: calc(100vh - 70px);
      }
      .sidebar {
        width: 300px;
        background: rgba(23, 27, 54, 0.9);
        border-right: 1px solid rgba(0, 123, 255, 0.25);
        display: flex;
        flex-direction: column;
      }
      .sidebar-header {
        padding: 20px;
        border-bottom: 1px solid rgba(0, 123, 255, 0.25);
        font-weight: 600;
        font-size: 1.1em;
      }
      .friends-list {
        flex: 1;
        overflow-y: auto;
      }
      .friend-item {
        padding: 15px 20px;
        display: flex;
        align-items: center;
        gap: 12px;
        cursor: pointer;
        transition: all 0.2s;
        border-bottom: 1px solid rgba(0, 123, 255, 0.1);
      }
      .friend-item:hover,
      .friend-item.active {
        background: rgba(0, 123, 255, 0.15);
      }
      .friend-avatar {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        background: linear-gradient(
          135deg,
          var(--primary-blue),
          var(--accent-violet)
        );
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 18px;
        flex-shrink: 0;
      }
      .friend-avatar img {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        object-fit: cover;
      }
      .friend-info h4 {
        font-size: 0.95em;
        margin-bottom: 3px;
      }
      .friend-info p {
        font-size: 0.8em;
        color: var(--subtle-text);
      }
      .chat-main {
        flex: 1;
        display: flex;
        flex-direction: column;
        background: var(--dark-card);
      }
      .chat-header {
        padding: 20px 30px;
        border-bottom: 1px solid rgba(0, 123, 255, 0.25);
        display: flex;
        align-items: center;
        gap: 15px;
      }
      .chat-header-avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: linear-gradient(
          135deg,
          var(--primary-blue),
          var(--accent-violet)
        );
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 20px;
      }
      .chat-header-avatar img {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        object-fit: cover;
      }
      .chat-header-info h3 {
        font-size: 1.1em;
      }
      .chat-header-info p {
        font-size: 0.85em;
        color: var(--subtle-text);
      }
      .messages-container {
        flex: 1;
        overflow-y: auto;
        padding: 20px 30px;
        display: flex;
        flex-direction: column;
        gap: 15px;
      }
      .message {
        display: flex;
        gap: 10px;
        max-width: 70%;
        animation: fadeIn 0.3s;
      }
      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(10px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      .message.sent {
        align-self: flex-end;
        flex-direction: row-reverse;
      }
      .message-avatar {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        background: linear-gradient(
          135deg,
          var(--primary-blue),
          var(--accent-violet)
        );
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 14px;
        flex-shrink: 0;
      }
      .message-avatar img {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        object-fit: cover;
      }
      .message-content {
        background: rgba(0, 123, 255, 0.2);
        padding: 10px 15px;
        border-radius: 12px;
        border: 1px solid rgba(0, 123, 255, 0.3);
      }
      .message.sent .message-content {
        background: linear-gradient(
          135deg,
          var(--primary-blue),
          var(--accent-violet)
        );
        border: none;
      }
      .message-text {
        word-wrap: break-word;
        margin-bottom: 5px;
      }
      .message-time {
        font-size: 0.75em;
        color: var(--subtle-text);
      }
      .message.sent .message-time {
        color: rgba(255, 255, 255, 0.7);
      }
      .chat-input-container {
        padding: 20px 30px;
        border-top: 1px solid rgba(0, 123, 255, 0.25);
        display: flex;
        gap: 15px;
      }
      .chat-input {
        flex: 1;
        padding: 12px 20px;
        border: 2px solid rgba(0, 123, 255, 0.4);
        border-radius: 25px;
        background: var(--input-bg);
        color: var(--text-light);
        font-size: 0.95em;
      }
      .chat-input:focus {
        outline: none;
        border-color: var(--accent-violet);
      }
      .send-btn {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: linear-gradient(
          135deg,
          var(--primary-blue),
          var(--accent-violet)
        );
        border: none;
        color: white;
        cursor: pointer;
        font-size: 1.2em;
        transition: all 0.3s;
      }
      .send-btn:hover {
        transform: scale(1.1);
      }
      .empty-state {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        color: var(--subtle-text);
        gap: 15px;
      }
      .empty-state i {
        font-size: 4em;
        opacity: 0.5;
      }
      .loading {
        text-align: center;
        padding: 20px;
        color: var(--subtle-text);
      }
      @media (max-width: 768px) {
        .sidebar {
          width: 250px;
        }
        .top-bar {
          padding: 12px 18px;
        }
        .logo {
          font-size: 1.6em;
        }
        .messages-container {
          padding: 15px;
        }
        .chat-input-container {
          padding: 15px;
        }
      }
    </style>
  </head>
  <body>
    <div class="top-bar">
      <div class="logo"><i class="fa-solid fa-message"></i> Chat</div>
      <button class="back-btn" onclick="window.location.href='/api/dashboard'">
        <i class="fas fa-arrow-left"></i> Dashboard
      </button>
    </div>

    <div class="chat-container">
      <div class="sidebar">
        <div class="sidebar-header">
          <i class="fas fa-user-friends"></i> Friends
        </div>
        <div class="friends-list" id="friendsList">
          <div class="loading">Loading friends...</div>
        </div>
      </div>

      <div class="chat-main" id="chatMain">
        <div class="empty-state">
          <i class="fas fa-comments"></i>
          <h3>Select a friend to start chatting</h3>
          <p>Choose a conversation from the sidebar</p>
        </div>
      </div>
    </div>

    <script>
      const socket = io();
      const currentUserId = "<%= user._id %>";
      const currentUserName = "<%= user.name %>";
      const currentUserPic = '<%= user.profilePic || "" %>';

      let selectedFriend = null;
      let friends = [];

      // Join user's chat room
      socket.emit("joinChat", currentUserId);

      // Listen for new messages
      socket.on("newPrivateMessage", (data) => {
        console.log("New message received:", data);
        if (selectedFriend && data.senderId === selectedFriend._id) {
          appendMessage(data, false);
          scrollToBottom();
        }
      });

      // Load friends
      async function loadFriends() {
        try {
          console.log("Loading friends...");
          const res = await fetch("/api/chat/users"); // This should work now
          const data = await res.json();
          console.log("Friends loaded:", data);

          if (data.success && data.friends) {
            friends = data.friends;
            displayFriends(friends);
          } else {
            document.getElementById("friendsList").innerHTML =
              '<div class="loading">No friends found</div>';
          }
        } catch (err) {
          console.error("Error loading friends:", err);
          document.getElementById("friendsList").innerHTML =
            '<div class="loading">Error loading friends</div>';
        }
      }

      function displayFriends(friendsList) {
        const container = document.getElementById("friendsList");
        if (!friendsList || !friendsList.length) {
          container.innerHTML =
            '<div class="loading">No friends yet. Add friends in Social Hub!</div>';
          return;
        }
        container.innerHTML = friendsList
          .map(
            (f) => `
        <div class="friend-item" data-friend-id="${
          f._id
        }" onclick="selectFriend('${f._id}')">
          <div class="friend-avatar">
            ${
              f.profilePic
                ? `<img src="${f.profilePic}" alt="${f.name}">`
                : f.name.charAt(0).toUpperCase()
            }
          </div>
          <div class="friend-info">
            <h4>${f.name}</h4>
            <p>@${f.username}</p>
          </div>
        </div>
      `
          )
          .join("");
      }

      async function selectFriend(friendId) {
        selectedFriend = friends.find((f) => f._id === friendId);
        if (!selectedFriend) return;

        // Update UI - highlight selected friend
        document.querySelectorAll(".friend-item").forEach((item) => {
          item.classList.remove("active");
        });
        document
          .querySelector(`[data-friend-id="${friendId}"]`)
          .classList.add("active");

        // Load chat
        await loadChat(friendId);
      }

      async function loadChat(friendId) {
        const chatMain = document.getElementById("chatMain");
        chatMain.innerHTML = `
        <div class="chat-header">
          <div class="chat-header-avatar">
            ${
              selectedFriend.profilePic
                ? `<img src="${selectedFriend.profilePic}" alt="${selectedFriend.name}">`
                : selectedFriend.name.charAt(0).toUpperCase()
            }
          </div>
          <div class="chat-header-info">
            <h3>${selectedFriend.name}</h3>
            <p>@${selectedFriend.username}</p>
          </div>
        </div>
        <div class="messages-container" id="messagesContainer">
          <div class="loading">Loading messages...</div>
        </div>
        <div class="chat-input-container">
          <input type="text" class="chat-input" id="messageInput" placeholder="Type a message..." onkeypress="handleKeyPress(event)">
          <button class="send-btn" onclick="sendMessage()">
            <i class="fas fa-paper-plane"></i>
          </button>
        </div>
      `;

        // Load messages
        try {
          const res = await fetch(`/api/chat/${friendId}`); // Changed from /messages/:id to /:id
          const data = await res.json();
          console.log("Messages loaded:", data);

          if (data.success) {
            displayMessages(data.messages);
          }
        } catch (err) {
          console.error("Error loading messages:", err);
          document.getElementById("messagesContainer").innerHTML =
            '<div class="empty-state"><i class="fas fa-exclamation-circle"></i><p>Error loading messages</p></div>';
        }
      }

      function displayMessages(messages) {
        const container = document.getElementById("messagesContainer");
        if (!messages || !messages.length) {
          container.innerHTML =
            '<div class="empty-state"><i class="fas fa-comment-slash"></i><p>No messages yet. Start the conversation!</p></div>';
          return;
        }
        container.innerHTML = messages
          .map((msg) => {
            const isSent = msg.senderId._id === currentUserId;
            return createMessageHTML(msg, isSent);
          })
          .join("");
        scrollToBottom();
      }

      function createMessageHTML(msg, isSent) {
        const time = new Date(msg.createdAt).toLocaleTimeString([], {
          hour: "2-digit",
          minute: "2-digit",
        });
        const avatar = isSent
          ? currentUserPic
            ? `<img src="${currentUserPic}" alt="${currentUserName}">`
            : currentUserName.charAt(0).toUpperCase()
          : msg.senderId.profilePic
          ? `<img src="${msg.senderId.profilePic}" alt="${msg.senderId.name}">`
          : msg.senderId.name.charAt(0).toUpperCase();

        return `
        <div class="message ${isSent ? "sent" : ""}">
          <div class="message-avatar">${avatar}</div>
          <div class="message-content">
            <div class="message-text">${msg.text}</div>
            <div class="message-time">${time}</div>
          </div>
        </div>
      `;
      }

      function appendMessage(msg, isSent) {
        const container = document.getElementById("messagesContainer");
        if (!container) return;

        // Remove empty state if exists
        const emptyState = container.querySelector(".empty-state");
        if (emptyState) {
          container.innerHTML = "";
        }

        container.innerHTML += createMessageHTML(msg, isSent);
      }

      async function sendMessage() {
        if (!selectedFriend) return;

        const input = document.getElementById("messageInput");
        const text = input.value.trim();
        if (!text) return;

        try {
          const res = await fetch(`/api/chat/send/${selectedFriend._id}`, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ text }),
          });

          const data = await res.json();
          console.log("Message sent:", data);

          if (data.success) {
            appendMessage(data.message, true);
            scrollToBottom();
            input.value = "";

            // Emit socket event to notify receiver
            socket.emit("sendPrivateMessage", {
              senderId: currentUserId,
              receiverId: selectedFriend._id,
              message: data.message,
            });
          }
        } catch (err) {
          console.error("Error sending message:", err);
          alert("Failed to send message. Please try again.");
        }
      }

      function handleKeyPress(e) {
        if (e.key === "Enter") {
          sendMessage();
        }
      }

      function scrollToBottom() {
        const container = document.getElementById("messagesContainer");
        if (container) {
          setTimeout(() => {
            container.scrollTop = container.scrollHeight;
          }, 100);
        }
      }

      // Load friends on page load
      loadFriends();
    </script>
  </body>
</html>


