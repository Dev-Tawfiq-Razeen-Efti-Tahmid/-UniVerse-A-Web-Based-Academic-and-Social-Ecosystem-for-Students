<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Live Chat - Student Portal</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
    <script src="/socket.io/socket.io.js"></script>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&family=Orbitron:wght@400;700&display=swap");
      :root {
        --dark-bg: #1a1a2e;
        --dark-card: #272c4a;
        --primary-blue: #007bff;
        --accent-violet: #8a2be2;
        --text-light: #e0e0e0;
        --input-bg: #3e4a6e;
        --subtle-text: #a0a0a0;
        --success-green: #00c878;
      }
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }
      body {
        font-family: "Montserrat", sans-serif;
        height: 100vh;
        background: linear-gradient(135deg, var(--dark-bg) 0%, #160e2c 100%);
        color: var(--text-light);
        overflow: hidden;
        display: flex;
        flex-direction: column;
      }
      .top-bar {
        background-color: var(--dark-card);
        padding: 15px 40px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
        border-bottom: 1px solid var(--accent-violet);
      }
      .logo {
        font-family: "Orbitron", sans-serif;
        font-size: 2em;
        font-weight: 700;
        background: linear-gradient(
          45deg,
          var(--primary-blue),
          var(--accent-violet)
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        display: flex;
        align-items: center;
        gap: 12px;
      }
      .back-btn {
        background: transparent;
        border: 1px solid rgba(0, 123, 255, 0.6);
        color: var(--text-light);
        border-radius: 8px;
        padding: 8px 16px;
        cursor: pointer;
        transition: all 0.3s;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 8px;
      }
      .back-btn:hover {
        background: rgba(0, 123, 255, 0.15);
        transform: translateY(-1px);
      }
      .chat-container {
        display: flex;
        flex: 1;
        overflow: hidden;
      }
      /* SIDEBAR */
      .sidebar {
        width: 320px;
        background: rgba(23, 27, 54, 0.9);
        border-right: 1px solid rgba(0, 123, 255, 0.25);
        display: flex;
        flex-direction: column;
      }
      .sidebar-header {
        padding: 20px;
        font-weight: 600;
        font-size: 1.1em;
        border-bottom: 1px solid rgba(0, 123, 255, 0.25);
        display: flex;
        align-items: center;
        gap: 10px;
      }
      .friends-list {
        flex: 1;
        overflow-y: auto;
      }
      .friend-item {
        padding: 15px 20px;
        border-bottom: 1px solid rgba(0, 123, 255, 0.1);
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        gap: 12px;
      }
      .friend-item:hover {
        background: rgba(0, 123, 255, 0.15);
      }
      .friend-item.active {
        background: rgba(138, 43, 226, 0.2);
        border-left: 4px solid var(--accent-violet);
      }
      .friend-icon {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        background: linear-gradient(
          135deg,
          var(--primary-blue),
          var(--accent-violet)
        );
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        font-weight: bold;
        flex-shrink: 0;
      }
      .friend-name {
        font-weight: 500;
        font-size: 0.95em;
      }
      .no-friends {
        padding: 20px;
        text-align: center;
        color: var(--subtle-text);
      }
      /* CHAT AREA */
      .chat-area {
        flex: 1;
        display: flex;
        flex-direction: column;
        background: var(--dark-card);
      }
      .chat-header {
        padding: 20px 30px;
        border-bottom: 1px solid rgba(0, 123, 255, 0.25);
        font-size: 1.1em;
        font-weight: 600;
        display: none;
        align-items: center;
        gap: 10px;
      }
      .messages-box {
        flex: 1;
        padding: 20px 30px;
        overflow-y: auto;
        display: flex;
        flex-direction: column;
        gap: 15px;
        background: var(--dark-card);
      }
      .no-chat-selected {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        color: var(--subtle-text);
        gap: 15px;
      }
      .no-chat-selected i {
        font-size: 4em;
        opacity: 0.5;
        background: linear-gradient(
          45deg,
          var(--primary-blue),
          var(--accent-violet)
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }
      /* Message Bubbles */
      .message {
        max-width: 65%;
        padding: 12px 16px;
        border-radius: 16px;
        font-size: 0.95em;
        line-height: 1.5;
        word-wrap: break-word;
        animation: fadeIn 0.3s;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
      }
      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(10px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      .message.sent {
        align-self: flex-end;
        background: linear-gradient(
          135deg,
          var(--primary-blue),
          var(--accent-violet)
        );
        color: white;
        border-bottom-right-radius: 4px;
      }
      .message.received {
        align-self: flex-start;
        background: rgba(0, 123, 255, 0.2);
        border: 1px solid rgba(0, 123, 255, 0.3);
        color: var(--text-light);
        border-bottom-left-radius: 4px;
      }
      /* INPUT AREA */
      .input-area {
        padding: 20px 30px;
        border-top: 1px solid rgba(0, 123, 255, 0.25);
        display: none;
        gap: 15px;
        align-items: center;
      }
      .input-area input {
        flex: 1;
        padding: 12px 20px;
        border-radius: 25px;
        border: 2px solid rgba(0, 123, 255, 0.4);
        background: var(--input-bg);
        color: var(--text-light);
        outline: none;
        font-size: 0.95em;
        transition: all 0.3s;
      }
      .input-area input:focus {
        border-color: var(--accent-violet);
        box-shadow: 0 0 10px rgba(138, 43, 226, 0.3);
      }
      .input-area button {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: linear-gradient(
          135deg,
          var(--primary-blue),
          var(--accent-violet)
        );
        border: none;
        color: white;
        cursor: pointer;
        font-size: 1.2em;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .input-area button:hover {
        transform: scale(1.1);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
      }
      /* Scrollbar styling */
      .friends-list::-webkit-scrollbar,
      .messages-box::-webkit-scrollbar {
        width: 8px;
      }
      .friends-list::-webkit-scrollbar-track,
      .messages-box::-webkit-scrollbar-track {
        background: rgba(0, 0, 0, 0.2);
        border-radius: 10px;
      }
      .friends-list::-webkit-scrollbar-thumb,
      .messages-box::-webkit-scrollbar-thumb {
        background: linear-gradient(
          180deg,
          var(--primary-blue),
          var(--accent-violet)
        );
        border-radius: 10px;
      }
      @media (max-width: 768px) {
        .top-bar {
          padding: 12px 18px;
        }
        .logo {
          font-size: 1.6em;
        }
        .sidebar {
          width: 280px;
        }
        .messages-box {
          padding: 15px;
        }
        .input-area {
          padding: 15px;
        }
      }
    </style>
  </head>
  <body>
    <div class="top-bar">
      <div class="logo"><i class="fa-solid fa-message"></i> Live Chat</div>
      <a href="/api/dashboard/social" class="back-btn">
        <i class="fas fa-arrow-left"></i> Back
      </a>
    </div>

    <div class="chat-container">
      <div class="sidebar">
        <div class="sidebar-header">
          <i class="fas fa-user-friends"></i> My Friends
        </div>
        <div class="friends-list">
          <% if(friends && friends.length > 0) { %> <% friends.forEach(friend =>
          { %>
          <div
            class="friend-item"
            data-id="<%= friend._id %>"
            data-name="<%= friend.name || friend.username %>"
            onclick="selectFriend('<%= friend._id %>', '<%= friend.name || friend.username %>')"
          >
            <div class="friend-icon">
              <%= (friend.name || friend.username).charAt(0).toUpperCase() %>
            </div>
            <div class="friend-name"><%= friend.name || friend.username %></div>
          </div>
          <% }) %> <% } else { %>
          <div class="no-friends">
            <i
              class="fas fa-user-friends"
              style="font-size: 3em; opacity: 0.3; margin-bottom: 10px"
            ></i>
            <p>No friends found.</p>
            <p style="font-size: 0.85em">Add friends in Social Hub!</p>
          </div>
          <% } %>
        </div>
      </div>

      <div class="chat-area">
        <div class="chat-header" id="chatHeader">
          <i class="fas fa-comment-dots"></i>
          <span id="chatWithTitle"></span>
        </div>

        <div class="messages-box" id="messagesBox">
          <div class="no-chat-selected">
            <i class="fas fa-comments"></i>
            <h3>Select a friend to start chatting</h3>
            <p>Choose a conversation from the sidebar</p>
          </div>
        </div>

        <div class="input-area" id="inputArea">
          <input
            type="text"
            id="msgInput"
            placeholder="Type a message..."
            onkeypress="handleEnter(event)"
          />
          <button onclick="sendMessage()">
            <i class="fas fa-paper-plane"></i>
          </button>
        </div>
      </div>
    </div>

    <script>
      // --- VARIABLES ---
      const socket = io();
      const myId = "<%= myId %>";
      let currentChatFriendId = null;

      // --- SOCKET INITIALIZATION ---
      socket.emit("joinChat", myId);

      socket.on("newPrivateMessage", (data) => {
        if (currentChatFriendId === data.senderId) {
          appendMessage(data.text, "received");
          scrollToBottom();
        } else {
          console.log(`New message from ${data.senderId}`);
        }
      });

      // --- FUNCTIONS ---

      async function selectFriend(friendId, friendName) {
        currentChatFriendId = friendId;

        document.getElementById("chatHeader").style.display = "flex";
        document.getElementById("inputArea").style.display = "flex";
        document.getElementById(
          "chatWithTitle"
        ).innerText = `Chatting with ${friendName}`;
        document.getElementById("messagesBox").innerHTML =
          '<div style="text-align:center; padding:20px; color: var(--subtle-text);">Loading history...</div>';

        document
          .querySelectorAll(".friend-item")
          .forEach((el) => el.classList.remove("active"));
        document
          .querySelector(`.friend-item[data-id="${friendId}"]`)
          .classList.add("active");

        try {
          const res = await fetch(`/api/chat/history/${friendId}`);
          const messages = await res.json();

          const msgBox = document.getElementById("messagesBox");
          msgBox.innerHTML = "";

          messages.forEach((msg) => {
            const type = msg.senderId === myId ? "sent" : "received";
            appendMessage(msg.text, type);
          });
          scrollToBottom();
        } catch (err) {
          console.error("Error loading chat", err);
          document.getElementById("messagesBox").innerHTML =
            '<div style="text-align:center; padding:20px; color: var(--subtle-text);">Error loading messages</div>';
        }
      }

      async function sendMessage() {
        const input = document.getElementById("msgInput");
        const text = input.value.trim();

        if (!text || !currentChatFriendId) return;

        appendMessage(text, "sent");
        scrollToBottom();
        input.value = "";

        try {
          const response = await fetch("/api/chat/send", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
              receiverId: currentChatFriendId,
              text: text,
            }),
          });

          if (response.ok) {
            socket.emit("sendPrivateMessage", {
              senderId: myId,
              receiverId: currentChatFriendId,
              message: { text: text },
            });
          } else {
            console.error("Failed to save message");
          }
        } catch (err) {
          console.error("Error sending message", err);
        }
      }

      function appendMessage(text, type) {
        const msgBox = document.getElementById("messagesBox");
        const div = document.createElement("div");
        div.classList.add("message", type);
        div.innerText = text;
        msgBox.appendChild(div);
      }

      function scrollToBottom() {
        const msgBox = document.getElementById("messagesBox");
        msgBox.scrollTop = msgBox.scrollHeight;
      }

      function handleEnter(e) {
        if (e.key === "Enter") sendMessage();
      }
    </script>
  </body>
</html>
