<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Live Chat - Student Portal</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
    <script src="/socket.io/socket.io.js"></script>
    <link rel="stylesheet" href="/css/chat.css" />
  </head>
  <body>
    <div class="top-bar">
      <div class="logo"><i class="fa-solid fa-message"></i> Live Chat</div>
      <a href="/api/dashboard/social" class="back-btn">
        <i class="fas fa-arrow-left"></i> Back
      </a>
    </div>

    <div class="chat-container">
      <div class="sidebar">
        <div class="sidebar-header">
          <i class="fas fa-user-friends"></i> My Friends
        </div>
        <div class="friends-list">
          <% if(friends && friends.length > 0) { %> <% friends.forEach(friend =>
          { %>
          <div
            class="friend-item"
            data-id="<%= friend._id %>"
            data-name="<%= friend.name || friend.username %>"
            onclick="selectFriend('<%= friend._id %>', '<%= friend.name || friend.username %>')"
          >
            <div class="friend-icon">
              <%= (friend.name || friend.username).charAt(0).toUpperCase() %>
            </div>
            <div class="friend-name"><%= friend.name || friend.username %></div>
          </div>
          <% }) %> <% } else { %>
          <div class="no-friends">
            <i
              class="fas fa-user-friends"
              style="font-size: 3em; opacity: 0.3; margin-bottom: 10px"
            ></i>
            <p>No friends found.</p>
            <p style="font-size: 0.85em">Add friends in Social Hub!</p>
          </div>
          <% } %>
        </div>
      </div>

      <div class="chat-area">
        <div class="chat-header" id="chatHeader">
          <i class="fas fa-comment-dots"></i>
          <span id="chatWithTitle"></span>
        </div>

        <div class="messages-box" id="messagesBox">
          <div class="no-chat-selected">
            <i class="fas fa-comments"></i>
            <h3>Select a friend to start chatting</h3>
            <p>Choose a conversation from the sidebar</p>
          </div>
        </div>

        <div class="input-area" id="inputArea">
          <input
            type="text"
            id="msgInput"
            placeholder="Type a message..."
            onkeypress="handleEnter(event)"
          />
          <button onclick="sendMessage()">
            <i class="fas fa-paper-plane"></i>
          </button>
        </div>
      </div>
    </div>

    <script>
      // --- VARIABLES ---
      const socket = io();
      const myId = "<%= myId %>";
      let currentChatFriendId = null;

      // --- SOCKET INITIALIZATION ---
      socket.emit("joinChat", myId);

      socket.on("newPrivateMessage", (data) => {
        if (currentChatFriendId === data.senderId) {
          appendMessage(data.text, "received");
          scrollToBottom();
        } else {
          console.log(`New message from ${data.senderId}`);
        }
      });

      // --- FUNCTIONS ---

      async function selectFriend(friendId, friendName) {
        currentChatFriendId = friendId;

        document.getElementById("chatHeader").style.display = "flex";
        document.getElementById("inputArea").style.display = "flex";
        document.getElementById(
          "chatWithTitle"
        ).innerText = `Chatting with ${friendName}`;
        document.getElementById("messagesBox").innerHTML =
          '<div style="text-align:center; padding:20px; color: var(--subtle-text);">Loading history...</div>';

        document
          .querySelectorAll(".friend-item")
          .forEach((el) => el.classList.remove("active"));
        document
          .querySelector(`.friend-item[data-id="${friendId}"]`)
          .classList.add("active");

        try {
          const res = await fetch(`/api/chat/history/${friendId}`);
          const messages = await res.json();

          const msgBox = document.getElementById("messagesBox");
          msgBox.innerHTML = "";

          messages.forEach((msg) => {
            const type = msg.senderId === myId ? "sent" : "received";
            appendMessage(msg.text, type);
          });
          scrollToBottom();
        } catch (err) {
          console.error("Error loading chat", err);
          document.getElementById("messagesBox").innerHTML =
            '<div style="text-align:center; padding:20px; color: var(--subtle-text);">Error loading messages</div>';
        }
      }

      async function sendMessage() {
        const input = document.getElementById("msgInput");
        const text = input.value.trim();

        if (!text || !currentChatFriendId) return;

        appendMessage(text, "sent");
        scrollToBottom();
        input.value = "";

        try {
          const response = await fetch("/api/chat/send", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
              receiverId: currentChatFriendId,
              text: text,
            }),
          });

          if (response.ok) {
            socket.emit("sendPrivateMessage", {
              senderId: myId,
              receiverId: currentChatFriendId,
              message: { text: text },
            });
          } else {
            console.error("Failed to save message");
          }
        } catch (err) {
          console.error("Error sending message", err);
        }
      }

      function appendMessage(text, type) {
        const msgBox = document.getElementById("messagesBox");
        const div = document.createElement("div");
        div.classList.add("message", type);
        div.innerText = text;
        msgBox.appendChild(div);
      }

      function scrollToBottom() {
        const msgBox = document.getElementById("messagesBox");
        msgBox.scrollTop = msgBox.scrollHeight;
      }

      function handleEnter(e) {
        if (e.key === "Enter") sendMessage();
      }
    </script>
  </body>
</html>
