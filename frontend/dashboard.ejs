            </div>

            <div class="service-card" onclick="navigateTo('/dashboard/forum')">
                <i class="fas fa-comments service-icon"></i> <div class="service-name">Discussion Forum</div>
            </div>

            <div class="service-card" onclick="navigateTo('/dashboard/planner')">
                <i class="fas fa-brain service-icon"></i> <div class="service-name">Study Planner</div>
            </div>

            <div class="service-card" onclick="navigateTo('/dashboard/social')">
                <i class="fas fa-share-alt service-icon"></i> <div class="service-name">Social Hub</div>
            </div>
        </div>
    </div>

