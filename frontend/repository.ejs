<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Repository - Student Portal</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&family=Orbitron:wght@400;700&display=swap");
      :root {
        --dark-bg: #1a1a2e;
        --dark-card: #272c4a;
        --primary-blue: #007bff;
        --accent-violet: #8a2be2;
        --text-light: #e0e0e0;
        --input-bg: #3e4a6e;
        --subtle-text: #a0a0a0;
        --success-green: #00c878;
        --danger-red: #ff4757;
      }
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }
      body {
        font-family: "Montserrat", sans-serif;
        min-height: 100vh;
        background: linear-gradient(135deg, var(--dark-bg) 0%, #160e2c 100%);
        color: var(--text-light);
      }
      .top-bar {
        background-color: var(--dark-card);
        padding: 15px 40px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
        border-bottom: 1px solid var(--accent-violet);
        position: sticky;
        top: 0;
        z-index: 1000;
      }
      .logo {
        font-family: "Orbitron", sans-serif;
        font-size: 2em;
        font-weight: 700;
        background: linear-gradient(
          45deg,
          var(--primary-blue),
          var(--accent-violet)
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        display: flex;
        align-items: center;
        gap: 12px;
      }
      .back-btn {
        background: transparent;
        border: 1px solid rgba(0, 123, 255, 0.6);
        color: var(--text-light);
        border-radius: 8px;
        padding: 8px 16px;
        cursor: pointer;
        transition: all 0.3s;
      }
      .back-btn:hover {
        background: rgba(0, 123, 255, 0.15);
        transform: translateY(-1px);
      }

      .main-content {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
      }
      .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
        flex-wrap: wrap;
        gap: 15px;
      }
      .page-title {
        font-family: "Orbitron", sans-serif;
        font-size: 2em;
        display: flex;
        align-items: center;
        gap: 10px;
      }
      .action-buttons {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
      }
      .action-btn {
        background: linear-gradient(
          90deg,
          var(--primary-blue),
          var(--accent-violet)
        );
        color: white;
        border: none;
        border-radius: 8px;
        padding: 10px 18px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
        user-select: none;
      }
      .action-btn:hover {
        transform: translateY(-2px);
      }
      .action-btn.secondary {
        background: linear-gradient(90deg, #f59e0b, #d97706);
      }

      .layout {
        display: grid;
        grid-template-columns: 1fr 360px;
        gap: 18px;
        align-items: start;
      }

      .panel {
        background-color: rgba(23, 27, 54, 0.9);
        border-radius: 16px;
        padding: 22px;
        border: 1px solid rgba(0, 123, 255, 0.25);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
      }

      .search-input {
        width: 100%;
        padding: 15px 20px;
        border: 2px solid rgba(0, 123, 255, 0.4);
        border-radius: 10px;
        background-color: var(--input-bg);
        color: var(--text-light);
        font-size: 1em;
        transition: all 0.3s;
      }
      .search-input:focus {
        outline: none;
        border-color: var(--accent-violet);
      }
      .hint {
        margin-top: 10px;
        color: var(--subtle-text);
        font-size: 0.95em;
      }
      .results-container {
        margin-top: 18px;
      }
      .status {
        margin-top: 14px;
        color: var(--subtle-text);
      }
      .status.error {
        color: var(--danger-red);
      }
      .status.success {
        color: var(--success-green);
      }

      .result-card {
        margin-top: 12px;
        padding: 14px;
        border: 1px solid rgba(0, 123, 255, 0.25);
        border-radius: 14px;
        background: rgba(39, 44, 74, 0.55);
      }
      .result-row {
        display: flex;
        justify-content: space-between;
        gap: 16px;
        align-items: center;
        flex-wrap: wrap;
      }
      .meta {
        color: var(--subtle-text);
        margin-top: 6px;
        font-size: 0.95em;
        line-height: 1.35;
      }
      .filename {
        color: var(--subtle-text);
        margin-top: 6px;
        font-size: 0.92em;
      }

      .tree-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 10px;
        margin-bottom: 10px;
      }
      .tree-title {
        font-family: "Orbitron", sans-serif;
        font-size: 1.2em;
        display: flex;
        align-items: center;
        gap: 10px;
      }
      .tree-subtitle {
        color: var(--subtle-text);
        font-size: 0.9em;
        margin-bottom: 14px;
      }
      .tree-scroll {
        max-height: 520px;
        overflow: auto;
        padding-right: 6px;
      }

      details {
        border: 1px solid rgba(0, 123, 255, 0.18);
        border-radius: 12px;
        background: rgba(39, 44, 74, 0.35);
        margin-bottom: 10px;
      }
      summary {
        list-style: none;
        cursor: pointer;
        padding: 12px 14px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 10px;
      }
      summary::-webkit-details-marker {
        display: none;
      }
      .summary-left {
        display: flex;
        align-items: center;
        gap: 10px;
      }
      .pill {
        font-size: 0.78em;
        color: white;
        background: rgba(0, 123, 255, 0.25);
        border: 1px solid rgba(0, 123, 255, 0.35);
        padding: 3px 10px;
        border-radius: 999px;
        white-space: nowrap;
      }
      .tree-inner {
        padding: 0 14px 12px 14px;
      }
      .course-btn {
        width: 100%;
        text-align: left;
        padding: 10px 12px;
        border-radius: 10px;
        border: 1px solid rgba(0, 123, 255, 0.18);
        background: rgba(23, 27, 54, 0.5);
        color: var(--text-light);
        cursor: pointer;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 10px;
        margin-top: 8px;
        transition: transform 0.2s;
      }
      .course-btn:hover {
        transform: translateY(-1px);
      }
      .course-right {
        display: flex;
        align-items: center;
        gap: 10px;
      }
      .count {
        color: var(--subtle-text);
        font-size: 0.85em;
      }

      .small-btn {
        background: transparent;
        border: 1px solid rgba(0, 123, 255, 0.35);
        color: var(--text-light);
        border-radius: 10px;
        padding: 7px 10px;
        cursor: pointer;
        transition: all 0.2s;
      }
      .small-btn:hover {
        background: rgba(0, 123, 255, 0.12);
        transform: translateY(-1px);
      }

      @media (max-width: 1000px) {
        .layout {
          grid-template-columns: 1fr;
        }
        .tree-scroll {
          max-height: 420px;
        }
      }

      .tree-scroll::-webkit-scrollbar {
        width: 8px;
      }
      .tree-scroll::-webkit-scrollbar-thumb {
        background: rgba(138, 43, 226, 0.35);
        border-radius: 999px;
      }
    </style>
  </head>

  <body>
    <div class="top-bar">
      <div class="logo"><i class="fa-solid fa-database"></i> Repository</div>
      <button class="back-btn" onclick="window.location.href='/api/dashboard'">
        <i class="fas fa-arrow-left"></i> Dashboard
      </button>
    </div>

    <div class="main-content">
      <div class="page-header">
        <div class="page-title">
          <i class="fa-solid fa-book"></i> Course Resources
        </div>

        <div class="action-buttons">
          <a class="action-btn secondary" href="/api/repository/upload">
            <i class="fa-solid fa-upload"></i> Upload
          </a>

          <a class="action-btn" href="/api/repository/my-uploads">
            <i class="fa-solid fa-folder-open"></i> My Uploads
          </a>

          <a class="action-btn" href="/api/repository/my-downloads">
            <i class="fa-solid fa-download"></i> My Downloads
          </a>
        </div>
      </div>

      <div class="layout">
        <div class="panel">
          <input
            type="text"
            class="search-input"
            id="searchInput"
            placeholder="Search by Course Code (e.g., CSE110, CSE370)..."
            autocomplete="off"
          />
          <div class="hint">
            Use search for quick access, or browse departments on the right.
          </div>

          <div id="status" class="status"></div>
          <div id="searchResults" class="results-container"></div>
        </div>

        <div class="panel">
          <div class="tree-header">
            <div class="tree-title">
              <i class="fa-solid fa-school"></i> BRACU Categories
            </div>
            <button id="refreshTreeBtn" class="small-btn" title="Refresh">
              <i class="fa-solid fa-rotate"></i>
            </button>
          </div>
          <div class="tree-subtitle">
            Department ‚Üí Semester ‚Üí Course (click course to load resources)
          </div>

          <div id="treeStatus" class="status"></div>
          <div id="repoTree" class="tree-scroll"></div>
        </div>
      </div>
    </div>

    <script>
      const searchInput = document.getElementById("searchInput");
      const searchResults = document.getElementById("searchResults");
      const statusEl = document.getElementById("status");

      const treeEl = document.getElementById("repoTree");
      const treeStatusEl = document.getElementById("treeStatus");
      const refreshTreeBtn = document.getElementById("refreshTreeBtn");

      let debounceTimer = null;

      function escapeHtml(str) {
        return String(str || "")
          .replaceAll("&", "&amp;")
          .replaceAll("<", "&lt;")
          .replaceAll(">", "&gt;")
          .replaceAll('"', "&quot;")
          .replaceAll("'", "&#039;");
      }

      function setStatus(el, msg, kind) {
        el.className = "status" + (kind ? " " + kind : "");
        el.textContent = msg || "";
      }

      function renderResults(items, fromLabel) {
        if (!items || items.length === 0) {
          searchResults.innerHTML = "";
          setStatus(statusEl, "No resources found.", "error");
          return;
        }

        const label = fromLabel ? ` (${fromLabel})` : "";
        setStatus(statusEl, `${items.length} resource(s) found${label}.`, "success");

        searchResults.innerHTML = items
          .map((r) => {
            const title = escapeHtml(r.title);
            const courseCode = escapeHtml(r.courseCode);
            const semester = escapeHtml(r.semester);
            const department = escapeHtml(r.department);
            const originalFileName = escapeHtml(r.originalFileName);

            const upCount = (r.upvotedBy || []).length;
            const downCount = (r.downvotedBy || []).length;

            return `
              <div class="result-card">
                <div class="result-row">
                  <div>
                    <div style="font-weight:700; font-size:1.05em;">${title}</div>
                    <div class="meta">
                      <b>${courseCode}</b> | ${department} | ${semester}
                    </div>
                    <div class="filename">File: ${originalFileName}</div>
                  </div>

                  <div style="display:flex; gap:10px; align-items:center;">
                    <button class="small-btn" onclick="vote('${r._id}', 'up')">
                      üëç <span id="up-${r._id}">${upCount}</span>
                    </button>

                    <button class="small-btn" onclick="vote('${r._id}', 'down')">
                      üëé <span id="down-${r._id}">${downCount}</span>
                    </button>

                    <a class="action-btn" href="/api/repository/${r._id}/download">
                      <i class="fa-solid fa-download"></i> Download
                    </a>
                  </div>
                </div>
              </div>
            `;
          })
          .join("");
      }

      async function searchNow() {
        const q = searchInput.value.trim();

        if (!q) {
          setStatus(statusEl, "");
          searchResults.innerHTML = "";
          return;
        }

        setStatus(statusEl, "Searching...", "");

        try {
          const res = await fetch(
            `/api/repository/api/resources?q=${encodeURIComponent(q)}`,
            { headers: { Accept: "application/json" } }
          );

          if (!res.ok) {
            setStatus(statusEl, "Failed to load results (are you logged in?).", "error");
            searchResults.innerHTML = "";
            return;
          }

          const data = await res.json();
          renderResults(data.resources || [], "search");
        } catch (e) {
          console.error(e);
          setStatus(statusEl, "Search failed due to network/server error.", "error");
          searchResults.innerHTML = "";
        }
      }

      searchInput.addEventListener("input", () => {
        clearTimeout(debounceTimer);
        debounceTimer = setTimeout(searchNow, 250);
      });

      // ‚úÖ vote() updates both counts
      async function vote(id, type) {
        try {
          const res = await fetch(`/api/repository/${id}/${type}vote`, {
            method: "POST",
            headers: { Accept: "application/json" },
          });

          if (!res.ok) return;

          const data = await res.json();

          const upEl = document.getElementById(`up-${id}`);
          const downEl = document.getElementById(`down-${id}`);

          if (upEl) upEl.textContent = data.upvotes;
          if (downEl) downEl.textContent = data.downvotes;
        } catch (e) {
          console.error("Vote failed", e);
        }
      }

      // ===== TREE =====
      function countResourcesInNode(node) {
        let count = 0;
        for (const sem of Object.keys(node)) {
          for (const course of Object.keys(node[sem])) {
            count += (node[sem][course] || []).length;
          }
        }
        return count;
      }

      function buildTreeUI(tree) {
        if (!tree || Object.keys(tree).length === 0) {
          treeEl.innerHTML = "";
          setStatus(treeStatusEl, "No categories yet. Upload something first.", "error");
          return;
        }

        setStatus(treeStatusEl, "", "");

        const departments = Object.keys(tree).sort((a, b) => a.localeCompare(b));

        treeEl.innerHTML = departments
          .map((dept) => {
            const deptNode = tree[dept] || {};
            const deptCount = countResourcesInNode(deptNode);

            const semesters = Object.keys(deptNode).sort((a, b) => a.localeCompare(b));
            const semesterHtml = semesters
              .map((sem) => {
                const semNode = deptNode[sem] || {};
                const courses = Object.keys(semNode).sort((a, b) => a.localeCompare(b));

                const semCount = courses.reduce((acc, c) => acc + (semNode[c]?.length || 0), 0);

                const courseHtml = courses
                  .map((course) => {
                    const items = semNode[course] || [];
                    return `
                      <button class="course-btn" data-course="${escapeHtml(course)}">
                        <span><i class="fa-solid fa-book-open"></i> <b>${escapeHtml(course)}</b></span>
                        <span class="course-right">
                          <span class="count">${items.length}</span>
                          <i class="fa-solid fa-chevron-left" style="opacity:0.6;"></i>
                        </span>
                      </button>
                    `;
                  })
                  .join("");

                return `
                  <details style="margin-top:10px;">
                    <summary>
                      <span class="summary-left">
                        <i class="fa-solid fa-calendar"></i>
                        <b>${escapeHtml(sem)}</b>
                      </span>
                      <span class="pill">${semCount}</span>
                    </summary>
                    <div class="tree-inner">
                      ${courseHtml || `<div class="hint">No courses found.</div>`}
                    </div>
                  </details>
                `;
              })
              .join("");

            return `
              <details>
                <summary>
                  <span class="summary-left">
                    <i class="fa-solid fa-building-columns"></i>
                    <b>${escapeHtml(dept)}</b>
                  </span>
                  <span class="pill">${deptCount}</span>
                </summary>
                <div class="tree-inner">
                  ${semesterHtml || `<div class="hint">No semesters found.</div>`}
                </div>
              </details>
            `;
          })
          .join("");

        treeEl.querySelectorAll(".course-btn").forEach((btn) => {
          btn.addEventListener("click", async () => {
            const course = btn.getAttribute("data-course");
            if (!course) return;

            searchInput.value = course;

            setStatus(statusEl, "Loading course resources...", "");
            try {
              const res = await fetch(
                `/api/repository/api/resources?q=${encodeURIComponent(course)}`,
                { headers: { Accept: "application/json" } }
              );
              const data = await res.json();
              renderResults(data.resources || [], course);
              window.scrollTo({ top: 0, behavior: "smooth" });
            } catch (e) {
              console.error(e);
              setStatus(statusEl, "Failed to load course resources.", "error");
            }
          });
        });
      }

      async function loadTree() {
        setStatus(treeStatusEl, "Loading categories...", "");
        treeEl.innerHTML = "";

        try {
          const res = await fetch(`/api/repository/api/tree`, {
            headers: { Accept: "application/json" },
          });

          if (!res.ok) {
            setStatus(treeStatusEl, "Failed to load tree (login required).", "error");
            return;
          }

          const data = await res.json();
          buildTreeUI(data.tree || {});
        } catch (e) {
          console.error(e);
          setStatus(treeStatusEl, "Tree load failed due to network/server error.", "error");
        }
      }

      refreshTreeBtn.addEventListener("click", loadTree);
      loadTree();
    </script>
  </body>
</html>
