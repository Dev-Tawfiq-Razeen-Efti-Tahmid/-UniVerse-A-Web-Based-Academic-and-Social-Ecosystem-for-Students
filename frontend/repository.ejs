<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Repository - Student Portal</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&family=Orbitron:wght@400;700&display=swap");
      :root {
        --dark-bg: #1a1a2e;
        --dark-card: #272c4a;
        --primary-blue: #007bff;
        --accent-violet: #8a2be2;
        --text-light: #e0e0e0;
        --input-bg: #3e4a6e;
        --subtle-text: #a0a0a0;
        --success-green: #00c878;
        --danger-red: #ff4757;
      }
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }
      body {
        font-family: "Montserrat", sans-serif;
        min-height: 100vh;
        background: linear-gradient(135deg, var(--dark-bg) 0%, #160e2c 100%);
        color: var(--text-light);
      }
      .top-bar {
        background-color: var(--dark-card);
        padding: 15px 40px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
        border-bottom: 1px solid var(--accent-violet);
        position: sticky;
        top: 0;
        z-index: 1000;
      }
      .logo {
        font-family: "Orbitron", sans-serif;
        font-size: 2em;
        font-weight: 700;
        background: linear-gradient(45deg, var(--primary-blue), var(--accent-violet));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        display: flex;
        align-items: center;
        gap: 12px;
      }
      .back-btn {
        background: transparent;
        border: 1px solid rgba(0, 123, 255, 0.6);
        color: var(--text-light);
        border-radius: 8px;
        padding: 8px 16px;
        cursor: pointer;
        transition: all 0.3s;
      }
      .back-btn:hover {
        background: rgba(0, 123, 255, 0.15);
        transform: translateY(-1px);
      }
      .main-content {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
      }
      .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
        flex-wrap: wrap;
        gap: 15px;
      }
      .page-title {
        font-family: "Orbitron", sans-serif;
        font-size: 2em;
        display: flex;
        align-items: center;
        gap: 10px;
      }
      .action-buttons {
        display: flex;
        gap: 12px;
      }
      .action-btn {
        background: linear-gradient(90deg, var(--primary-blue), var(--accent-violet));
        color: white;
        border: none;
        border-radius: 8px;
        padding: 10px 18px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
        user-select: none;
      }
      .action-btn:hover {
        transform: translateY(-2px);
      }
      .action-btn.secondary {
        background: linear-gradient(90deg, #f59e0b, #d97706);
      }
      .search-wrapper {
        background-color: rgba(23, 27, 54, 0.9);
        border-radius: 16px;
        padding: 24px;
        border: 1px solid rgba(0, 123, 255, 0.25);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
      }
      .search-input {
        width: 100%;
        padding: 15px 20px;
        border: 2px solid rgba(0, 123, 255, 0.4);
        border-radius: 10px;
        background-color: var(--input-bg);
        color: var(--text-light);
        font-size: 1em;
        transition: all 0.3s;
      }
      .search-input:focus {
        outline: none;
        border-color: var(--accent-violet);
      }
      .results-container {
        margin-top: 18px;
      }
      .hint {
        margin-top: 10px;
        color: var(--subtle-text);
        font-size: 0.95em;
      }

      .result-card {
        margin-top: 12px;
        padding: 14px;
        border: 1px solid rgba(0, 123, 255, 0.25);
        border-radius: 14px;
        background: rgba(39, 44, 74, 0.55);
      }
      .result-row {
        display: flex;
        justify-content: space-between;
        gap: 16px;
        align-items: center;
        flex-wrap: wrap;
      }
      .meta {
        color: var(--subtle-text);
        margin-top: 6px;
        font-size: 0.95em;
        line-height: 1.35;
      }
      .filename {
        color: var(--subtle-text);
        margin-top: 6px;
        font-size: 0.92em;
      }
      .status {
        margin-top: 14px;
        color: var(--subtle-text);
      }
      .status.error {
        color: var(--danger-red);
      }
      .status.success {
        color: var(--success-green);
      }

      @media (max-width: 768px) {
        .top-bar {
          padding: 12px 18px;
        }
        .logo {
          font-size: 1.6em;
        }
        .page-title {
          font-size: 1.6em;
        }
      }
    </style>
  </head>
  <body>
    <div class="top-bar">
      <div class="logo"><i class="fa-solid fa-database"></i> Repository</div>
      <button class="back-btn" onclick="window.location.href='/api/dashboard'">
        <i class="fas fa-arrow-left"></i> Dashboard
      </button>
    </div>

    <div class="main-content">
      <div class="page-header">
        <div class="page-title">
          <i class="fa-solid fa-book"></i> Search Course Resources
        </div>

        <div class="action-buttons">
          <a class="action-btn secondary" href="/api/repository/upload">
            <i class="fa-solid fa-upload"></i> Upload
          </a>
        </div>
      </div>

      <div class="search-wrapper">
        <input
          type="text"
          class="search-input"
          id="searchInput"
          placeholder="Search by Course Code (e.g., CSE110, CSE370)..."
          autocomplete="off"
        />
        <div class="hint">
          Type a course code. Matching uploads will appear with a Download button.
        </div>

        <div id="status" class="status"></div>
        <div id="searchResults" class="results-container"></div>
      </div>
    </div>

    <script>
      const searchInput = document.getElementById("searchInput");
      const searchResults = document.getElementById("searchResults");
      const statusEl = document.getElementById("status");

      let debounceTimer = null;

      function escapeHtml(str) {
        return String(str || "")
          .replaceAll("&", "&amp;")
          .replaceAll("<", "&lt;")
          .replaceAll(">", "&gt;")
          .replaceAll('"', "&quot;")
          .replaceAll("'", "&#039;");
      }

      function setStatus(msg, kind) {
        statusEl.className = "status" + (kind ? " " + kind : "");
        statusEl.textContent = msg || "";
      }

      function renderResults(items) {
        if (!items || items.length === 0) {
          searchResults.innerHTML = "";
          setStatus("No resources found.", "error");
          return;
        }

        setStatus(`${items.length} resource(s) found.`, "success");

        searchResults.innerHTML = items
          .map((r) => {
            const title = escapeHtml(r.title);
            const courseCode = escapeHtml(r.courseCode);
            const semester = escapeHtml(r.semester);
            const department = escapeHtml(r.department);
            const originalFileName = escapeHtml(r.originalFileName);

            return `
              <div class="result-card">
                <div class="result-row">
                  <div>
                    <div style="font-weight:700; font-size:1.05em;">${title}</div>
                    <div class="meta">
                      <b>${courseCode}</b> | ${department} | ${semester}
                    </div>
                    <div class="filename">File: ${originalFileName}</div>
                  </div>

                  <a class="action-btn" href="/api/repository/${r._id}/download">
                    <i class="fa-solid fa-download"></i> Download
                  </a>
                </div>
              </div>
            `;
          })
          .join("");
      }

      async function searchNow() {
        const q = searchInput.value.trim();

        if (!q) {
          setStatus("");
          searchResults.innerHTML = "";
          return;
        }

        setStatus("Searching...", "");

        try {
          const res = await fetch(
            `/api/repository/api/resources?q=${encodeURIComponent(q)}`,
            { headers: { "Accept": "application/json" } }
          );

          if (!res.ok) {
            // If session expired, backend might redirect to login; res.ok may be false.
            setStatus("Failed to load results (are you logged in?).", "error");
            searchResults.innerHTML = "";
            return;
          }

          const data = await res.json();
          renderResults(data.resources || []);
        } catch (e) {
          console.error(e);
          setStatus("Search failed due to network/server error.", "error");
          searchResults.innerHTML = "";
        }
      }

      searchInput.addEventListener("input", () => {
        clearTimeout(debounceTimer);
        debounceTimer = setTimeout(searchNow, 250);
      });
    </script>
  </body>
</html>
