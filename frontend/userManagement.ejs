<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>User Management | UniVerse Admin</title>
  <style>
    @import url("https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&family=Orbitron:wght@400;700&display=swap");
    :root {
      --dark-bg: #050818;
      --dark-card: #11162b;
      --primary-blue: #00b4ff;
      --accent-violet: #b832ff;
      --text-light: #e0e7ff;
      --subtle: #9aa3d8;
      --danger: #ff5050;
      --warning: #ffa500;
      --success: #00d084;
    }

    body {
      margin: 0;
      font-family: Montserrat, sans-serif;
      background: radial-gradient(circle at top, #1b1f3b 0%, #050818 50%, #020312 100%);
      color: var(--text-light);
      min-height: 100vh;
    }

    .navbar {
      background: rgba(17, 22, 43, 0.85);
      border-bottom: 1px solid rgba(184, 50, 255, 0.4);
      padding: 18px 40px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      backdrop-filter: blur(6px);
      position: sticky;
      top: 0;
      z-index: 100;
    }

    .logo {
      font-family: Orbitron, sans-serif;
      font-size: 2em;
      font-weight: 700;
      background: linear-gradient(45deg, var(--primary-blue), var(--accent-violet));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .btn {
      background: linear-gradient(90deg, var(--primary-blue), var(--accent-violet));
      color: #fff;
      border: 0;
      border-radius: 10px;
      padding: 10px 18px;
      font-weight: 700;
      cursor: pointer;
      text-decoration: none;
      transition: transform 0.3s ease;
    }

    .btn:hover {
      transform: translateY(-2px);
    }

    .btn-back {
      background: rgba(0, 180, 255, 0.2);
      border: 1px solid rgba(0, 180, 255, 0.5);
      color: var(--primary-blue);
    }

    .container {
      max-width: 1300px;
      margin: 40px auto;
      padding: 0 25px;
    }

    h1 {
      font-family: Orbitron, sans-serif;
      text-shadow: 0 0 12px rgba(0, 180, 255, 0.6);
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 30px;
    }

    .search-section {
      background: rgba(17, 22, 43, 0.65);
      border: 1px solid rgba(184, 50, 255, 0.35);
      border-radius: 14px;
      padding: 30px;
      box-shadow: 0 10px 35px rgba(0, 0, 0, 0.45);
      backdrop-filter: blur(5px);
      margin-bottom: 30px;
    }

    .search-form {
      display: flex;
      gap: 15px;
      margin-bottom: 20px;
    }

    .search-input {
      flex: 1;
      background: rgba(0, 180, 255, 0.1);
      border: 1px solid rgba(0, 180, 255, 0.3);
      border-radius: 8px;
      padding: 12px 15px;
      color: var(--text-light);
      font-family: Montserrat, sans-serif;
      font-size: 1em;
    }

    .search-input::placeholder {
      color: var(--subtle);
    }

    .search-input:focus {
      outline: none;
      border-color: var(--primary-blue);
      box-shadow: 0 0 10px rgba(0, 180, 255, 0.3);
    }

    .alert {
      padding: 15px;
      border-radius: 8px;
      margin-bottom: 20px;
      font-weight: 600;
    }

    .alert-success {
      background: rgba(0, 208, 132, 0.2);
      border: 1px solid rgba(0, 208, 132, 0.5);
      color: var(--success);
    }

    .alert-error {
      background: rgba(255, 80, 80, 0.2);
      border: 1px solid rgba(255, 80, 80, 0.5);
      color: var(--danger);
    }

    .users-table {
      width: 100%;
      border-collapse: collapse;
      background: rgba(17, 22, 43, 0.65);
      border: 1px solid rgba(184, 50, 255, 0.35);
      border-radius: 14px;
      overflow: hidden;
      box-shadow: 0 10px 35px rgba(0, 0, 0, 0.45);
    }

    .users-table thead {
      background: rgba(184, 50, 255, 0.2);
      border-bottom: 1px solid rgba(184, 50, 255, 0.35);
    }

    .users-table th {
      padding: 18px;
      text-align: left;
      font-weight: 700;
      text-transform: uppercase;
      font-size: 0.9em;
      letter-spacing: 1px;
    }

    .users-table td {
      padding: 15px 18px;
      border-bottom: 1px solid rgba(184, 50, 255, 0.15);
    }

    .users-table tbody tr:hover {
      background: rgba(0, 180, 255, 0.05);
    }

    .status-badge {
      display: inline-block;
      padding: 6px 12px;
      border-radius: 6px;
      font-weight: 600;
      font-size: 0.85em;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .status-active {
      background: rgba(0, 208, 132, 0.2);
      color: var(--success);
    }

    .status-suspended {
      background: rgba(255, 165, 0, 0.2);
      color: var(--warning);
    }

    .status-banned {
      background: rgba(255, 80, 80, 0.2);
      color: var(--danger);
    }

    .action-buttons {
      display: flex;
      gap: 8px;
      flex-wrap: wrap;
    }

    .action-btn {
      padding: 8px 12px;
      border: none;
      border-radius: 6px;
      font-weight: 600;
      cursor: pointer;
      font-size: 0.9em;
      transition: all 0.3s ease;
    }

    .btn-notify {
      background: rgba(0, 180, 255, 0.2);
      color: var(--primary-blue);
      border: 1px solid rgba(0, 180, 255, 0.3);
    }

    .btn-notify:hover {
      background: rgba(0, 180, 255, 0.3);
    }

    .btn-suspend {
      background: rgba(255, 165, 0, 0.2);
      color: var(--warning);
      border: 1px solid rgba(255, 165, 0, 0.3);
    }

    .btn-suspend:hover {
      background: rgba(255, 165, 0, 0.3);
    }

    .btn-ban {
      background: rgba(255, 80, 80, 0.2);
      color: var(--danger);
      border: 1px solid rgba(255, 80, 80, 0.3);
    }

    .btn-ban:hover {
      background: rgba(255, 80, 80, 0.3);
    }

    .btn-reactivate {
      background: rgba(0, 208, 132, 0.2);
      color: var(--success);
      border: 1px solid rgba(0, 208, 132, 0.3);
    }

    .btn-reactivate:hover {
      background: rgba(0, 208, 132, 0.3);
    }

    .modal {
      display: none;
      position: fixed;
      z-index: 1000;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.7);
    }

    .modal-content {
      background: var(--dark-card);
      margin: 5% auto;
      padding: 30px;
      border: 1px solid rgba(184, 50, 255, 0.35);
      border-radius: 14px;
      width: 90%;
      max-width: 500px;
      box-shadow: 0 10px 35px rgba(0, 0, 0, 0.45);
    }

    .modal-header {
      font-family: Orbitron, sans-serif;
      font-size: 1.5em;
      margin-bottom: 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .close {
      color: var(--subtle);
      font-size: 2em;
      font-weight: bold;
      cursor: pointer;
    }

    .close:hover {
      color: var(--text-light);
    }

    .form-group {
      margin-bottom: 20px;
    }

    .form-group label {
      display: block;
      margin-bottom: 8px;
      font-weight: 600;
    }

    .form-group textarea,
    .form-group input {
      width: 100%;
      padding: 12px;
      background: rgba(0, 180, 255, 0.1);
      border: 1px solid rgba(0, 180, 255, 0.3);
      border-radius: 8px;
      color: var(--text-light);
      font-family: Montserrat, sans-serif;
      box-sizing: border-box;
    }

    .form-group textarea:focus,
    .form-group input:focus {
      outline: none;
      border-color: var(--primary-blue);
      box-shadow: 0 0 10px rgba(0, 180, 255, 0.3);
    }

    .form-group textarea {
      resize: vertical;
      min-height: 100px;
    }

    .modal-buttons {
      display: flex;
      gap: 15px;
      justify-content: flex-end;
    }

    .modal-btn {
      padding: 12px 25px;
      border: none;
      border-radius: 8px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .modal-btn-confirm {
      background: linear-gradient(90deg, var(--primary-blue), var(--accent-violet));
      color: white;
    }

    .modal-btn-cancel {
      background: rgba(155, 163, 216, 0.2);
      color: var(--subtle);
      border: 1px solid rgba(155, 163, 216, 0.3);
    }

    .empty-state {
      text-align: center;
      padding: 60px 20px;
    }

    .empty-state-icon {
      font-size: 3em;
      margin-bottom: 20px;
    }

    .empty-state-text {
      color: var(--subtle);
      font-size: 1.2em;
    }

    @media (max-width: 768px) {
      .users-table {
        font-size: 0.9em;
      }

      .users-table th,
      .users-table td {
        padding: 12px 8px;
      }

      .action-buttons {
        flex-direction: column;
      }

      .action-btn {
        width: 100%;
      }

      .search-form {
        flex-direction: column;
      }
    }
  </style>
</head>
<body>
  <nav class="navbar">
    <div class="logo">UniVerse Admin - User Management</div>
    <button class="btn btn-back" onclick="window.location.href='/api/admin/landing'">‚Üê Back to Landing</button>
  </nav>

  <div class="container">
    <h1>
      <span>Search & Manage Users</span>
    </h1>

    <div class="search-section">
      <div class="search-form">
        <input 
          type="text" 
          id="searchInput" 
          class="search-input" 
          placeholder="Search by username, email, name, or student ID..." 
          value="<%= searchQuery %>"
        />
        <button class="btn" onclick="searchUsers()">üîç Search</button>
      </div>

      <% if (successMessage) { %>
        <div class="alert alert-success"><%= successMessage %></div>
      <% } %>

      <% if (errorMessage && users.length === 0 && searchQuery) { %>
        <div class="alert alert-error"><%= errorMessage %></div>
      <% } %>
    </div>

    <% if (users.length > 0) { %>
      <table class="users-table">
        <thead>
          <tr>
            <th>Username</th>
            <th>Name</th>
            <th>Email</th>
            <th>Department</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
            <tr>
              <td><strong><%= user.UserName %></strong></td>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= user.department %></td>
              <td>
                <span class="status-badge status-<%= user.accountStatus %>">
                  <%= user.accountStatus %>
                </span>
              </td>
              <td>
                <div class="action-buttons">
                  <button class="action-btn btn-notify" onclick="openNotifyModal('<%= user._id %>', '<%= user.UserName %>')">üìß Notify</button>
                  
                  <% if (user.accountStatus === 'active') { %>
                    <button class="action-btn btn-suspend" onclick="openSuspendModal('<%= user._id %>', '<%= user.UserName %>')">‚è∏ Suspend</button>
                    <button class="action-btn btn-ban" onclick="openBanModal('<%= user._id %>', '<%= user.UserName %>')">üö´ Ban</button>
                  <% } else { %>
                    <button class="action-btn btn-reactivate" onclick="reactivateUser('<%= user._id %>', '<%= user.UserName %>')">‚úÖ Reactivate</button>
                  <% } %>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else if (searchQuery) { %>
      <div class="empty-state">
        <div class="empty-state-icon">üîé</div>
        <div class="empty-state-text">No users found matching "<%= searchQuery %>"</div>
      </div>
    <% } else { %>
      <div class="empty-state">
        <div class="empty-state-icon">üë•</div>
        <div class="empty-state-text">Enter a search term to find and manage users</div>
      </div>
    <% } %>
  </div>

  <!-- Notify Modal -->
  <div id="notifyModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <span>Send Notification</span>
        <span class="close" onclick="closeModal('notifyModal')">&times;</span>
      </div>
      <input type="hidden" id="notifyUserId" />
      <div class="form-group">
        <label for="notifyTitle">Notification Title</label>
        <input type="text" id="notifyTitle" placeholder="Enter notification title" />
      </div>
      <div class="form-group">
        <label for="notifyMessage">Message</label>
        <textarea id="notifyMessage" placeholder="Enter your message here..."></textarea>
      </div>
      <div class="form-group">
        <label for="notifyType">Notification Type</label>
        <select id="notifyType">
          <option value="general">General</option>
          <option value="warning">Warning</option>
          <option value="suspension">Suspension</option>
          <option value="ban">Ban</option>
          <option value="account-update">Account Update</option>
        </select>
      </div>
      <div class="modal-buttons">
        <button class="modal-btn modal-btn-cancel" onclick="closeModal('notifyModal')">Cancel</button>
        <button class="modal-btn modal-btn-confirm" onclick="sendNotification()">Send Notification</button>
      </div>
    </div>
  </div>

  <!-- Suspend Modal -->
  <div id="suspendModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <span>Suspend User Account</span>
        <span class="close" onclick="closeModal('suspendModal')">&times;</span>
      </div>
      <input type="hidden" id="suspendUserId" />
      <div class="form-group">
        <label for="suspendDuration">Suspension Duration</label>
        <div style="display: flex; gap: 10px; align-items: center;">
          <input type="number" id="suspendDuration" placeholder="Duration in hours" min="1" max="8760" style="flex: 1;" />
          <span style="color: var(--subtle); font-size: 0.9em;">hours</span>
          <span style="color: var(--subtle); font-size: 0.85em;">(or leave empty for permanent)</span>
        </div>
      </div>
      <div class="form-group">
        <label for="suspendReason">Reason for Suspension</label>
        <textarea id="suspendReason" placeholder="Provide a reason for suspending this account..."></textarea>
      </div>
      <div class="modal-buttons">
        <button class="modal-btn modal-btn-cancel" onclick="closeModal('suspendModal')">Cancel</button>
        <button class="modal-btn modal-btn-confirm" onclick="suspendUser()" style="background: rgba(255, 165, 0, 0.5); color: var(--warning);">Suspend Account</button>
      </div>
    </div>
  </div>

  <!-- Ban Modal -->
  <div id="banModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <span>Ban User Account</span>
        <span class="close" onclick="closeModal('banModal')">&times;</span>
      </div>
      <input type="hidden" id="banUserId" />
      <div class="form-group">
        <label for="banReason">Reason for Ban</label>
        <textarea id="banReason" placeholder="Provide a reason for banning this account..."></textarea>
      </div>
      <div class="modal-buttons">
        <button class="modal-btn modal-btn-cancel" onclick="closeModal('banModal')">Cancel</button>
        <button class="modal-btn modal-btn-confirm" onclick="banUser()" style="background: rgba(255, 80, 80, 0.5); color: var(--danger);">Ban Account</button>
      </div>
    </div>
  </div>

  <script>
    function searchUsers() {
      const query = document.getElementById('searchInput').value.trim();
      if (query) {
        window.location.href = `/api/admin/users/search?query=${encodeURIComponent(query)}`;
      }
    }

    function openNotifyModal(userId, username) {
      document.getElementById('notifyUserId').value = userId;
      document.getElementById('notifyTitle').value = '';
      document.getElementById('notifyMessage').value = '';
      document.getElementById('notifyType').value = 'general';
      document.getElementById('notifyModal').style.display = 'block';
    }

    function openSuspendModal(userId, username) {
      document.getElementById('suspendUserId').value = userId;
      document.getElementById('suspendDuration').value = '';
      document.getElementById('suspendReason').value = '';
      document.getElementById('suspendModal').style.display = 'block';
    }

    function openBanModal(userId, username) {
      document.getElementById('banUserId').value = userId;
      document.getElementById('banModal').style.display = 'block';
    }

    function closeModal(modalId) {
      document.getElementById(modalId).style.display = 'none';
    }

    function sendNotification() {
      const userId = document.getElementById('notifyUserId').value;
      const title = document.getElementById('notifyTitle').value.trim();
      const message = document.getElementById('notifyMessage').value.trim();
      const type = document.getElementById('notifyType').value;

      if (!title || !message) {
        alert('Please fill in all required fields');
        return;
      }

      fetch('/api/admin/users/notify', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ userId, title, message, type })
      })
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          alert('Notification sent successfully');
          closeModal('notifyModal');
          document.getElementById('notifyTitle').value = '';
          document.getElementById('notifyMessage').value = '';
          document.getElementById('notifyType').value = 'general';
        } else {
          alert('Error: ' + data.message);
        }
      })
      .catch(err => alert('Error sending notification'));
    }

    function suspendUser() {
      const userId = document.getElementById('suspendUserId').value;
      const reason = document.getElementById('suspendReason').value.trim();
      const durationHours = document.getElementById('suspendDuration').value.trim();

      if (!reason) {
        alert('Please provide a reason for suspension');
        return;
      }

      const durationNum = durationHours ? parseInt(durationHours) : null;
      if (durationNum && (durationNum < 1 || durationNum > 8760)) {
        alert('Duration must be between 1 and 8760 hours (1 year)');
        return;
      }

      fetch('/api/admin/users/suspend', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ userId, reason, durationHours: durationNum })
      })
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          alert(data.message);
          closeModal('suspendModal');
          location.reload();
        } else {
          alert('Error: ' + data.message);
        }
      })
      .catch(err => alert('Error suspending user'));
    }

    function banUser() {
      const userId = document.getElementById('banUserId').value;
      const reason = document.getElementById('banReason').value.trim();

      fetch('/api/admin/users/ban', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ userId, reason })
      })
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          alert(data.message);
          closeModal('banModal');
          location.reload();
        } else {
          alert('Error: ' + data.message);
        }
      })
      .catch(err => alert('Error banning user'));
    }

    function reactivateUser(userId, username) {
      if (confirm(`Are you sure you want to reactivate ${username}'s account?`)) {
        fetch('/api/admin/users/reactivate', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ userId })
        })
        .then(res => res.json())
        .then(data => {
          if (data.success) {
            alert(data.message);
            location.reload();
          } else {
            alert('Error: ' + data.message);
          }
        })
        .catch(err => alert('Error reactivating user'));
      }
    }

    // Close modal when clicking outside of it
    window.onclick = function(event) {
      let modal = document.getElementById('notifyModal');
      if (event.target == modal) {
        closeModal('notifyModal');
      }
      modal = document.getElementById('suspendModal');
      if (event.target == modal) {
        closeModal('suspendModal');
      }
      modal = document.getElementById('banModal');
      if (event.target == modal) {
        closeModal('banModal');
      }
    }

    // Allow Enter key to search
    document.getElementById('searchInput').addEventListener('keypress', function(e) {
      if (e.key === 'Enter') {
        searchUsers();
      }
    });
  </script>
</body>
</html>
